      </main>
    </div>
    <script>
  let itemCounter = <%= invoice.items.length %>;
  const invoiceStatus = '<%= invoice.status %>';
  const invoiceId = '<%= invoice._id %>';

  function goBack() {
    window.history.back();
  }

  function addItem() {
    const tbody = document.getElementById('itemsTableBody');
    const row = document.createElement('tr');
    row.setAttribute('data-index', itemCounter);
    row.innerHTML = `
      <td>
        <input type="text" name="items[${itemCounter}][productName]" placeholder="Product name" required />
      </td>
      <td>
        <input type="text" name="items[${itemCounter}][sku]" placeholder="SKU" required />
      </td>
      <td class="right">
        <input type="number" name="items[${itemCounter}][quantity]" value="1" min="1" required onchange="calculateTotals()" />
      </td>
      <td class="right">
        <input type="number" name="items[${itemCounter}][rentalDays]" value="1" min="1" required onchange="calculateTotals()" />
      </td>
      <td class="right">
        <input type="number" name="items[${itemCounter}][rentalPrice]" value="0" step="0.01" min="0" required onchange="calculateTotals()" />
      </td>
      <td class="right" id="itemAmount${itemCounter}">‚Çπ0.00</td>
      <td>
        <button type="button" class="remove-item-btn" onclick="removeItem(${itemCounter})">√ó</button>
      </td>
    `;
    tbody.appendChild(row);
    itemCounter++;
    calculateTotals();
  }

  function removeItem(index) {
    const row = document.querySelector(`tr[data-index="${index}"]`);
    if (row) {
      row.remove();
      calculateTotals();
    }
  }

  function calculateTotals() {
    let subtotal = 0;
    const rows = document.querySelectorAll('#itemsTableBody tr');

    rows.forEach((row) => {
      const index = row.getAttribute('data-index');
      const qty = parseFloat(row.querySelector(`input[name="items[${index}][quantity]"]`)?.value || 0);
      const days = parseFloat(row.querySelector(`input[name="items[${index}][rentalDays]"]`)?.value || 0);
      const price = parseFloat(row.querySelector(`input[name="items[${index}][rentalPrice]"]`)?.value || 0);
      const itemTotal = qty * days * price;
      
      const amountCell = document.getElementById(`itemAmount${index}`);
      if (amountCell) {
        amountCell.textContent = `‚Çπ${itemTotal.toFixed(2)}`;
      }
      
      subtotal += itemTotal;
    });

    // Get discount
    const discountType = document.querySelector('select[name="discountType"]').value;
    const discountValue = parseFloat(document.querySelector('input[name="discountValue"]').value || 0);
    let discountAmount = 0;
    
    if (discountType === 'Percentage') {
      discountAmount = (subtotal * discountValue) / 100;
    } else if (discountType === 'Fixed') {
      discountAmount = discountValue;
    }

    // Calculate tax
    const taxRate = parseFloat(document.querySelector('input[name="taxRate"]').value || 0);
    const taxableAmount = subtotal - discountAmount;
    const taxAmount = (taxableAmount * taxRate) / 100;

    // Other fees
    const securityDeposit = parseFloat(document.querySelector('input[name="securityDeposit"]').value || 0);
    const lateFees = parseFloat(document.querySelector('input[name="lateFees"]').value || 0);

    // Total
    const totalAmount = taxableAmount + taxAmount + securityDeposit + lateFees;

    // Update UI
    document.getElementById('summarySubtotal').textContent = `‚Çπ${subtotal.toFixed(2)}`;
    document.getElementById('summaryDiscount').textContent = `-‚Çπ${discountAmount.toFixed(2)}`;
    document.getElementById('summaryTax').textContent = `‚Çπ${taxAmount.toFixed(2)}`;
    document.getElementById('summaryDeposit').textContent = `‚Çπ${securityDeposit.toFixed(2)}`;
    document.getElementById('summaryLateFees').textContent = `‚Çπ${lateFees.toFixed(2)}`;
    document.getElementById('summaryTotal').textContent = `‚Çπ${totalAmount.toFixed(2)}`;
  }

  async function saveInvoice() {
    const form = document.getElementById('invoiceForm');
    const formData = new FormData(form);
    
    // Build invoice object
    const invoiceData = {
      billTo: {
        name: '<%= invoice.billTo.name %>',
        phone: formData.get('billTo.phone'),
        email: formData.get('billTo.email'),
        street: formData.get('billTo.street'),
        city: formData.get('billTo.city'),
        state: formData.get('billTo.state'),
        postalCode: formData.get('billTo.postalCode'),
        country: formData.get('billTo.country'),
      },
      items: [],
      issueDate: formData.get('issueDate'),
      dueDate: formData.get('dueDate'),
      paymentTerms: formData.get('paymentTerms'),
      status: formData.get('status'),
      discountType: formData.get('discountType'),
      discountValue: parseFloat(formData.get('discountValue') || 0),
      taxRate: parseFloat(formData.get('taxRate') || 0),
      securityDeposit: parseFloat(formData.get('securityDeposit') || 0),
      lateFees: parseFloat(formData.get('lateFees') || 0),
      invoiceNotes: formData.get('invoiceNotes'),
      internalNotes: formData.get('internalNotes'),
    };

    // Extract items
    const rows = document.querySelectorAll('#itemsTableBody tr');
    rows.forEach((row) => {
      const index = row.getAttribute('data-index');
      const qty = parseFloat(row.querySelector(`input[name="items[${index}][quantity]"]`)?.value || 0);
      const days = parseFloat(row.querySelector(`input[name="items[${index}][rentalDays]"]`)?.value || 0);
      const price = parseFloat(row.querySelector(`input[name="items[${index}][rentalPrice]"]`)?.value || 0);
      
      invoiceData.items.push({
        productName: row.querySelector(`input[name="items[${index}][productName]"]`)?.value,
        sku: row.querySelector(`input[name="items[${index}][sku]"]`)?.value,
        quantity: qty,
        rentalDays: days,
        rentalPrice: price,
        subtotal: qty * days * price,
      });
    });

    // Validate
    if (invoiceData.items.length === 0) {
      await Swal.fire({
        icon: 'error',
        title: 'No Items',
        text: 'Please add at least one item to the invoice.',
        background: '#151821',
        color: '#f9fafb',
        confirmButtonColor: '#4b63ff',
      });
      return;
    }

    // Show loading
    Swal.fire({
      title: 'Updating Invoice...',
      html: 'Please wait while we save your changes',
      allowOutsideClick: false,
      allowEscapeKey: false,
      didOpen: () => {
        Swal.showLoading();
      }
    });

    try {
      const response = await fetch('/api/invoices/<%= invoice._id %>', {
        method: 'PUT',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(invoiceData),
      });

      const data = await response.json();

      // ‚úÖ CHECK FOR PAID/LOCKED INVOICE ERROR
      if (!data.ok) {
        // Check if it's a "paid invoice" or "cannot edit" error
        const errorMsg = data.message || '';
        const isPaidError = errorMsg.toLowerCase().includes('paid') || 
                           errorMsg.toLowerCase().includes('cannot edit') ||
                           errorMsg.toLowerCase().includes('locked') ||
                           response.status === 403;

        if (isPaidError) {
          await Swal.fire({
            icon: 'warning',
            title: 'Cannot Edit Invoice',
            html: `
              <div style="text-align: center; margin-top: 12px;">
                <p style="color: var(--text-soft); margin-bottom: 12px; font-size: 14px;">
                  ${data.message}
                </p>
                <div style="
                  background: rgba(249, 115, 115, 0.1);
                  border: 1px solid rgba(249, 115, 115, 0.3);
                  padding: 16px;
                  border-radius: 8px;
                  margin: 16px 0;
                ">
                  <div style="font-size: 14px; color: var(--danger); font-weight: 500;">
                    ‚ùå Paid or cancelled invoices cannot be modified
                  </div>
                </div>
                <p style="color: var(--text-muted); font-size: 12px;">
                  You will be redirected to view the invoice.
                </p>
              </div>
            `,
            background: '#151821',
            color: '#f9fafb',
            confirmButtonColor: '#4b63ff',
            confirmButtonText: 'üìÑ View Invoice',
          }).then(() => {
            window.location.href = `/invoices/<%= invoice._id %>`;
          });
          return;
        }

        // Other errors
        throw new Error(data.message || 'Failed to update invoice');
      }

      // ‚úÖ SUCCESS
      await Swal.fire({
        icon: 'success',
        title: 'Invoice Updated!',
        text: 'Invoice has been updated successfully.',
        background: '#151821',
        color: '#f9fafb',
        confirmButtonColor: '#4b63ff',
      });

      window.location.href = `/invoices/<%= invoice._id %>`;

    } catch (error) {
      console.error('Error updating invoice:', error);
      await Swal.fire({
        icon: 'error',
        title: 'Update Failed',
        text: error.message || 'Failed to update invoice. Please try again.',
        background: '#151821',
        color: '#f9fafb',
        confirmButtonColor: '#4b63ff',
      });
    }
  }

  // Initial calculation
  calculateTotals();
</script>

