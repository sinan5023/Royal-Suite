<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Edit Customer - SuitManager Pro</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
      :root {
        --bg-main: #0f1115;
        --bg-elevated: #151821;
        --bg-elevated-soft: #171a24;
        --sidebar-bg: #11131b;
        --sidebar-active: #1f2432;
        --border-subtle: #222633;
        --accent: #4b63ff;
        --accent-soft: #3744a9;
        --danger: #f97373;
        --success: #22c55e;
        --warning: #fbbf24;
        --text-main: #f9fafb;
        --text-soft: #9ca3af;
        --text-muted: #6b7280;
        --card-radius: 12px;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "SF Pro Text",
          "Segoe UI", sans-serif;
      }

      body {
        background: var(--bg-main);
        color: var(--text-main);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }

      .topbar {
        height: 42px;
        background: #12131b;
        border-bottom: 1px solid #222436;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 16px;
        font-size: 11px;
        color: var(--text-soft);
      }
      .topbar-left {
        display: flex;
        align-items: center;
        gap: 8px;
      }
      .topbar-logo-pill {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 4px 10px;
        border-radius: 999px;
        background: #1b1f2a;
        border: 1px solid #252a3a;
        font-size: 11px;
      }
      .logo-square {
        width: 18px;
        height: 18px;
        border-radius: 6px;
        background: var(--accent);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 11px;
      }
      .topbar-center {
        flex: 1;
        text-align: center;
        font-size: 10px;
        color: var(--text-soft);
      }
      .topbar-right {
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 10px;
      }
      .topbar-pill {
        padding: 4px 10px;
        border-radius: 999px;
        background: #1b1f2a;
        border: 1px solid #252a3a;
        display: flex;
        align-items: center;
        gap: 6px;
      }
      .avatar-circle {
        width: 18px;
        height: 18px;
        border-radius: 999px;
        background: #374151;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 10px;
      }

      .layout {
        display: flex;
        flex: 1;
        min-height: 0;
      }
      .sidebar {
        width: 230px;
        background: var(--sidebar-bg);
        border-right: 1px solid #181b27;
        display: flex;
        flex-direction: column;
      }
      .sidebar-header {
        padding: 14px 14px 10px;
        border-bottom: 1px solid #181b27;
        display: flex;
        align-items: center;
        gap: 8px;
      }
      .sidebar-header-logo {
        width: 26px;
        height: 26px;
        border-radius: 8px;
        background: var(--accent);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 15px;
      }
      .sidebar-header-text {
        font-size: 13px;
        font-weight: 600;
      }
      .sidebar-nav {
        padding: 10px 8px;
        flex: 1;
      }
      .sidebar-section-title {
        font-size: 11px;
        text-transform: uppercase;
        color: var(--text-muted);
        padding: 6px 8px;
        letter-spacing: 0.08em;
      }
      .sidebar-item {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 7px 10px;
        border-radius: 8px;
        color: var(--text-soft);
        font-size: 13px;
        cursor: pointer;
        margin-bottom: 4px;
        text-decoration: none;
      }
      .sidebar-item:hover {
        background: #191d28;
      }
      .sidebar-item.active {
        background: var(--sidebar-active);
        color: #e5e7eb;
      }
      .sidebar-icon {
        width: 18px;
        height: 18px;
        border-radius: 999px;
        background: #1f2937;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 11px;
      }
      .sidebar-footer {
        padding: 10px;
        border-top: 1px solid #181b27;
        font-size: 11px;
        color: var(--text-muted);
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .content {
        flex: 1;
        padding: 14px 18px 18px;
        overflow-y: auto;
      }

      .page-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 16px;
      }
      .page-title {
        font-size: 18px;
        font-weight: 600;
      }
      .page-subtitle {
        font-size: 12px;
        color: var(--text-soft);
        margin-top: 2px;
      }

      .btn {
        padding: 8px 18px;
        border-radius: 8px;
        font-size: 12px;
        font-weight: 500;
        cursor: pointer;
        border: none;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        text-decoration: none;
      }
      .btn-secondary {
        background: transparent;
        border: 1px solid #262b3c;
        color: var(--text-soft);
      }
      .btn-secondary:hover {
        background: #191d2a;
      }
      .btn-primary {
        background: var(--accent);
        color: white;
      }
      .btn-primary:hover {
        background: var(--accent-soft);
      }

      .two-column-layout {
        display: grid;
        grid-template-columns: 280px 1fr;
        gap: 16px;
      }
      .left-panel {
        display: flex;
        flex-direction: column;
        gap: 12px;
      }
      .panel-card {
        background: var(--bg-elevated);
        border-radius: var(--card-radius);
        border: 1px solid var(--border-subtle);
        padding: 12px;
      }
      .panel-title {
        font-size: 12px;
        font-weight: 500;
        margin-bottom: 10px;
      }
      .summary-line {
        font-size: 12px;
        color: var(--text-soft);
        margin-bottom: 4px;
      }

      .form-container {
        background: var(--bg-elevated);
        border-radius: var(--card-radius);
        border: 1px solid var(--border-subtle);
        padding: 16px 18px;
      }
      .form-section {
        margin-bottom: 20px;
      }
      .section-title {
        font-size: 14px;
        font-weight: 600;
        margin-bottom: 12px;
        color: var(--text-main);
      }
      .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 12px;
        margin-bottom: 12px;
      }
      .form-row.single {
        grid-template-columns: 1fr;
      }
      .form-group {
        display: flex;
        flex-direction: column;
        gap: 6px;
      }
      .form-label {
        font-size: 12px;
        color: var(--text-soft);
      }
      .required {
        color: var(--danger);
      }

      .form-input,
      .form-select,
      .form-textarea {
        padding: 8px 10px;
        border-radius: 8px;
        border: 1px solid #222635;
        background: #11131c;
        color: var(--text-main);
        font-size: 12px;
      }
      .form-input:focus,
      .form-select:focus,
      .form-textarea:focus {
        outline: none;
        border-color: var(--accent);
      }
      .form-textarea {
        resize: vertical;
        min-height: 80px;
      }

      .phone-input-group {
        display: flex;
        gap: 8px;
      }
      .country-code {
        width: 80px;
      }
      .form-hint {
        font-size: 10px;
        color: var(--text-muted);
      }

      .toggle-group {
        display: flex;
        align-items: center;
        gap: 8px;
      }
      .toggle-switch {
        position: relative;
        width: 40px;
        height: 20px;
        background: #2a2d3a;
        border-radius: 999px;
        cursor: pointer;
        transition: background 0.2s;
      }
      .toggle-switch.active {
        background: var(--accent);
      }
      .toggle-slider {
        position: absolute;
        top: 2px;
        left: 2px;
        width: 16px;
        height: 16px;
        background: white;
        border-radius: 999px;
        transition: transform 0.2s;
      }
      .toggle-switch.active .toggle-slider {
        transform: translateX(20px);
      }
      .toggle-label {
        font-size: 12px;
        color: var(--text-soft);
      }

      .form-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 20px;
        padding-top: 16px;
        border-top: 1px solid var(--border-subtle);
      }
      .error-message {
        font-size: 11px;
        color: var(--danger);
        display: flex;
        align-items: center;
        gap: 6px;
      }

      .field-error {
        font-size: 10px;
        color: var(--danger);
        margin-top: 2px;
        display: none;
      }

      .swal2-popup.smpro-swal-popup {
        background: #151821;
        border-radius: 12px;
        border: 1px solid #222633;
        color: #f9fafb;
        box-shadow: 0 18px 45px rgba(0, 0, 0, 0.75);
      }
      .smpro-swal-title {
        font-size: 18px;
        font-weight: 600;
      }
      .smpro-swal-text {
        font-size: 13px;
        color: #9ca3af;
      }
      .smpro-swal-confirm {
        border-radius: 8px !important;
        font-size: 13px !important;
        font-weight: 500 !important;
      }

      @media (max-width: 1024px) {
        .two-column-layout {
          grid-template-columns: 1fr;
        }
        .left-panel {
          order: 2;
        }
      }
      @media (max-width: 768px) {
        .layout {
          flex-direction: column;
        }
        .sidebar {
          width: 100%;
          order: 2;
        }
        .content {
          order: 1;
        }
        .form-row {
          grid-template-columns: 1fr;
        }
      }
    </style>
  </head>
  <body>
    <header class="topbar">
      <div class="topbar-left">
        <div class="topbar-logo-pill">
          <div class="logo-square">üß≥</div>
          <span>SuitManager Pro</span>
        </div>
      </div>
      <div class="topbar-center">
        <span
          ><%= greeting %>, <%= user.name %>. &nbsp; <%= user.role %> | <%=
          currentDate %></span
        >
      </div>
      <div class="topbar-right">
        <div class="topbar-pill">
          <span><%= user.role %> | <%= currentDate %></span>
        </div>
        <div class="avatar-circle">
          <%= user.name.charAt(0).toUpperCase() %>
        </div>
      </div>
    </header>

    <div class="layout">
      <aside class="sidebar">
        <div class="sidebar-header">
          <div class="sidebar-header-logo">üß≥</div>
          <div class="sidebar-header-text">SuitManager Pro</div>
        </div>
        <div class="sidebar-nav">
          <div class="sidebar-section-title">Menu</div>

          <a href="/dashboard" class="sidebar-item">
            <div class="sidebar-icon">üè†</div>
            <span>Dashboard</span>
          </a>
          <a href="/customers" class="sidebar-item active">
            <div class="sidebar-icon">üë§</div>
            <span>Customers</span>
          </a>
          <a href="/bookings" class="sidebar-item">
            <div class="sidebar-icon">üì¶</div>
            <span>Bookings</span>
          </a>
          <a href="/expenses" class="sidebar-item">
            <div class="sidebar-icon">üí≥</div>
            <span>Sales &amp; Expenses</span>
          </a>
          <a href="/inventory" class="sidebar-item">
            <div class="sidebar-icon">üìã</div>
            <span>Inventory</span>
          </a>
          <a href="/invoices" class="sidebar-item">
            <div class="sidebar-icon">üíº</div>
            <span>Invoices</span>
          </a>
        </div>
        <div class="sidebar-footer">
          <span>v1.0.0</span>
          <div class="sidebar-collapse">‚¨Ö Collapse</div>
        </div>
      </aside>

      <main class="content">
        <div class="page-header">
          <div>
            <div class="page-title">Edit Customer</div>
            <div class="page-subtitle">
              Updating <strong><%= customer.fullName %></strong>
              (ID: <%= customer.customerCode || customer.displayId %>)
            </div>
          </div>
          <div>
            <a href="/api/customers/<%= customer._id %>" class="btn btn-secondary">
              ‚Üê View Customer
            </a>
          </div>
        </div>

        <div class="two-column-layout">
          <div class="left-panel">
            <div class="panel-card">
              <div class="panel-title">Customer Overview</div>
              <div class="summary-line">
                Status: <strong><%= customer.status %></strong>
              </div>
              <div class="summary-line">
                Total Bookings:
                <strong><%= customer.totalBookings || 0 %></strong>
              </div>
              <div class="summary-line">
                Outstanding Balance:
                <strong>‚Çπ <%= customer.outstandingBalance || 0 %></strong>
              </div>
            </div>
          </div>

          <div class="form-container">
            <form id="editCustomerForm">
              <!-- Personal Information -->
              <div class="form-section">
                <div class="section-title">Personal Information</div>
                <div class="form-row">
                  <div class="form-group">
                    <label class="form-label">
                      Full Name <span class="required">*</span>
                    </label>
                    <input
                      type="text"
                      name="fullName"
                      class="form-input"
                      value="<%= customer.fullName %>"
                      required
                    />
                  </div>
                  <div class="form-group">
                    <label class="form-label">
                      Gender <span class="required">*</span>
                    </label>
                    <select name="gender" class="form-select" required>
                      <option value="">Select Gender</option>
                      <option
                        value="male"
                        <%= customer.gender === 'male' ? 'selected' : '' %>
                      >
                        Male
                      </option>
                      <option
                        value="female"
                        <%= customer.gender === 'female' ? 'selected' : '' %>
                      >
                        Female
                      </option>
                      <option
                        value="other"
                        <%= customer.gender === 'other' ? 'selected' : '' %>
                      >
                        Other
                      </option>
                    </select>
                  </div>
                </div>
                <div class="form-row single">
                  <div class="form-group">
                    <label class="form-label">
                      Date of Birth <span class="required">*</span>
                    </label>
                    <input
                      type="date"
                      name="dateOfBirth"
                      class="form-input"
                      value="<%= customer.dateOfBirthISO || customer.dateOfBirth %>"
                      required
                    />
                  </div>
                </div>
              </div>

              <!-- Contact & Communication -->
              <div class="form-section">
                <div class="section-title">Contact & Communication</div>
                <div class="form-row">
                  <div class="form-group">
                    <label class="form-label">
                      Mobile <span class="required">*</span>
                    </label>
                    <div class="phone-input-group">
                      <% 
                        const primary = customer.primaryMobile || '';
                        const primaryCode = primary.startsWith('+') ? primary.slice(0, 3) : '+91';
                        const primaryNumber = primary.startsWith('+') ? primary.slice(primaryCode.length) : primary;
                      %>
                      <select
                        name="countryCode"
                        class="form-select country-code"
                      >
                        <option
                          value="+91"
                          <%= primaryCode === '+91' ? 'selected' : '' %>
                        >
                          üáÆüá≥ +91
                        </option>
                        <option
                          value="+1"
                          <%= primaryCode === '+1' ? 'selected' : '' %>
                        >
                          üá∫üá∏ +1
                        </option>
                        <option
                          value="+44"
                          <%= primaryCode === '+44' ? 'selected' : '' %>
                        >
                          üá¨üáß +44
                        </option>
                      </select>
                      <input
                        type="tel"
                        name="mobile"
                        class="form-input"
                        value="<%= primaryNumber %>"
                        placeholder="10-digit mobile number"
                        required
                      />
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="form-label">Alternate Phone</label>
                    <div class="phone-input-group">
                      <% 
                        const alt = customer.alternateMobile || '';
                        const altCode = alt.startsWith('+') ? alt.slice(0, 3) : '+91';
                        const altNumber = alt.startsWith('+') ? alt.slice(altCode.length) : alt;
                      %>
                      <select
                        name="altCountryCode"
                        class="form-select country-code"
                      >
                        <option
                          value="+91"
                          <%= altCode === '+91' ? 'selected' : '' %>
                        >
                          üáÆüá≥ +91
                        </option>
                        <option
                          value="+1"
                          <%= altCode === '+1' ? 'selected' : '' %>
                        >
                          üá∫üá∏ +1
                        </option>
                        <option
                          value="+44"
                          <%= altCode === '+44' ? 'selected' : '' %>
                        >
                          üá¨üáß +44
                        </option>
                      </select>
                      <input
                        type="tel"
                        name="alternatePhone"
                        class="form-input"
                        value="<%= altNumber %>"
                        placeholder="10-digit mobile number"
                      />
                    </div>
                  </div>
                </div>
                <div class="form-row">
                  <div class="form-group">
                    <label class="form-label">
                      Email <span class="required">*</span>
                    </label>
                    <input
                      type="email"
                      name="email"
                      class="form-input"
                      value="<%= customer.email || '' %>"
                      required
                    />
                  </div>
                  <div class="form-group">
                    <label class="form-label">
                      Preferred Contact Channel
                      <span class="required">*</span>
                    </label>
                    <select
                      name="preferredContact"
                      class="form-select"
                      required
                    >
                      <option value="">Select Channel</option>
                      <option
                        value="whatsapp"
                        <%= customer.preferredContact === 'whatsapp' ? 'selected' : '' %>
                      >
                        WhatsApp
                      </option>
                      <option
                        value="call"
                        <%= customer.preferredContact === 'call' ? 'selected' : '' %>
                      >
                        Call
                      </option>
                      <option
                        value="sms"
                        <%= customer.preferredContact === 'sms' ? 'selected' : '' %>
                      >
                        SMS
                      </option>
                      <option
                        value="email"
                        <%= customer.preferredContact === 'email' ? 'selected' : '' %>
                      >
                        Email
                      </option>
                    </select>
                  </div>
                </div>
                <div class="form-row single">
                  <div class="form-group">
                    <div class="toggle-group">
                      <div
                        class="toggle-switch <%= customer.whatsappAvailable ? 'active' : '' %>"
                        id="whatsappToggle"
                      >
                        <div class="toggle-slider"></div>
                      </div>
                      <span class="toggle-label">WhatsApp Available</span>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Status & Flags -->
              <div class="form-section">
                <div class="section-title">Status & Flags</div>
                <div class="form-row">
                  <div class="form-group">
                    <label class="form-label">
                      Customer Status <span class="required">*</span>
                    </label>
                    <select name="status" class="form-select" required>
                      <option
                        value="active"
                        <%= customer.status === 'active' ? 'selected' : '' %>
                      >
                        Active
                      </option>
                      <option
                        value="inactive"
                        <%= customer.status === 'inactive' ? 'selected' : '' %>
                      >
                        Inactive
                      </option>
                      <option
                        value="vip"
                        <%= customer.status === 'vip' ? 'selected' : '' %>
                      >
                        VIP
                      </option>
                      <option
                        value="blacklisted"
                        <%= customer.status === 'blacklisted' ? 'selected' : '' %>
                      >
                        Blacklisted
                      </option>
                    </select>
                    <div class="form-hint">
                      Controls whether the customer can make new bookings and
                      how they appear in lists.
                    </div>
                  </div>
                </div>
              </div>

              <!-- Address -->
              <div class="form-section">
                <div class="section-title">Address Information</div>
                <div class="form-row single">
                  <div class="form-group">
                    <label class="form-label">
                      Street Address <span class="required">*</span>
                    </label>
                    <input
                      type="text"
                      name="streetAddress"
                      class="form-input"
                      value="<%= customer.street || '' %>"
                      required
                    />
                  </div>
                </div>
                <div class="form-row">
                  <div class="form-group">
                    <label class="form-label">
                      City <span class="required">*</span>
                    </label>
                    <input
                      type="text"
                      name="city"
                      class="form-input"
                      value="<%= customer.city || '' %>"
                      required
                    />
                  </div>
                  <div class="form-group">
                    <label class="form-label">
                      State/Region <span class="required">*</span>
                    </label>
                    <input
                      type="text"
                      name="state"
                      class="form-input"
                      value="<%= customer.state || '' %>"
                      required
                    />
                  </div>
                </div>
                <div class="form-row">
                  <div class="form-group">
                    <label class="form-label">
                      Postal Code <span class="required">*</span>
                    </label>
                    <input
                      type="text"
                      name="postalCode"
                      class="form-input"
                      value="<%= customer.postalCode || '' %>"
                      required
                    />
                  </div>
                  <div class="form-group">
                    <label class="form-label">
                      Country <span class="required">*</span>
                    </label>
                    <input
                      type="text"
                      name="country"
                      class="form-input"
                      value="<%= customer.country || 'India' %>"
                      required
                    />
                  </div>
                </div>
              </div>

              <!-- Other Notes -->
              <div class="form-section">
                <div class="section-title">Other Notes</div>
                <div class="form-row single">
                  <div class="form-group">
                    <label class="form-label">
                      Tags (comma separated)
                    </label>
                    <input
                      type="text"
                      name="tags"
                      class="form-input"
                      value="<%= customer.tags || '' %>"
                    />
                  </div>
                </div>
                <div class="form-row single">
                  <div class="form-group">
                    <label class="form-label">
                      Customer Notes (Visible to staff and customers)
                    </label>
                    <textarea
                      name="customerNotes"
                      class="form-textarea"
                    ><%= customer.customerNotes || '' %></textarea>
                  </div>
                </div>
                <div class="form-row single">
                  <div class="form-group">
                    <label class="form-label">
                      Internal Flags (Visible only to staff)
                    </label>
                    <textarea
                      name="internalFlags"
                      class="form-textarea"
                    ><%= customer.internalFlags || '' %></textarea>
                  </div>
                </div>
              </div>

              <div class="form-footer">
                <div class="error-message" style="opacity: 0">
                  ‚ö† Please fix the errors above
                </div>
                <div class="footer-actions">
                  <button
                    type="button"
                    class="btn btn-secondary"
                    onclick="window.history.back()"
                  >
                    Cancel
                  </button>
                  <button type="submit" class="btn btn-primary">
                    ‚úì Update Customer
                  </button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </main>
    </div>

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const form = document.getElementById("editCustomerForm");
        const errorMsg = document.querySelector(".error-message");
        const submitBtn = form.querySelector(".btn-primary");
        const whatsappToggle = document.getElementById("whatsappToggle");

        whatsappToggle.addEventListener("click", () => {
          whatsappToggle.classList.toggle("active");
        });

        function showError(message) {
          errorMsg.style.opacity = "1";
          errorMsg.textContent = "‚ö† " + message;
        }
        function clearError() {
          errorMsg.style.opacity = "0";
        }

        const mobileInput = form.querySelector('input[name="mobile"]');
        mobileInput.addEventListener("input", (e) => {
          e.target.value = e.target.value.replace(/\D/g, "").slice(0, 10);
        });
        const altInput = form.querySelector('input[name="alternatePhone"]');
        altInput.addEventListener("input", (e) => {
          e.target.value = e.target.value.replace(/\D/g, "").slice(0, 10);
        });
        const postalInput = form.querySelector('input[name="postalCode"]');
        postalInput.addEventListener("input", (e) => {
          e.target.value = e.target.value.replace(/\D/g, "").slice(0, 6);
        });

        form.addEventListener("submit", async (e) => {
          e.preventDefault();
          clearError();

          if (!mobileInput.value || mobileInput.value.length !== 10) {
            showError("Primary mobile must be 10 digits");
            return;
          }

          submitBtn.disabled = true;
          submitBtn.innerHTML = "<span>‚è≥</span> Updating...";

          const formData = new FormData(form);
          const data = {};
          formData.forEach((value, key) => {
            data[key] = typeof value === "string" ? value.trim() : value;
          });

          data.whatsappAvailable = whatsappToggle.classList.contains("active");

          data.primaryMobile = (data.countryCode || "+91") + data.mobile;
          delete data.countryCode;
          delete data.mobile;

          if (data.alternatePhone) {
            data.alternateMobile =
              (data.altCountryCode || "+91") + data.alternatePhone;
          } else {
            data.alternateMobile = null;
          }
          delete data.altCountryCode;
          delete data.alternatePhone;

          data.street = data.streetAddress;
          delete data.streetAddress;

          try {
            const response = await fetch("/api/customers/<%= customer._id %>", {
              method: "PUT",
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify(data),
              credentials: "include",
            });

            const result = await response.json();

            if (response.ok && result.ok) {
              await Swal.fire({
                title: "Customer Updated",
                text:
                  result.message ||
                  "The customer has been updated successfully.",
                icon: "success",
                background: "#151821",
                color: "#f9fafb",
                iconColor: "#22c55e",
                confirmButtonText: "Back to Customer",
                confirmButtonColor: "#4b63ff",
                customClass: {
                  popup: "smpro-swal-popup",
                  title: "smpro-swal-title",
                  htmlContainer: "smpro-swal-text",
                  confirmButton: "smpro-swal-confirm",
                },
              });
              window.location.href = "/api/customers/<%= customer._id %>";
            } else {
              showError(result.message || "Failed to update customer");
              submitBtn.disabled = false;
              submitBtn.innerHTML = "‚úì Update Customer";
            }
          } catch (err) {
            console.error("Error updating customer:", err);
            showError("Network error. Please try again.");
            submitBtn.disabled = false;
            submitBtn.innerHTML = "‚úì Update Customer";
          }
        });
      });
    </script>
  </body>
</html>
