    <script>
      const state = {
        page: 1,
        limit: 20,
        total: 0,
        totalPages: 1,
        q: "",
        category: "",
        paymentStatus: "",
      };

      const tbody = document.getElementById("expensesBody");
      const summaryText = document.getElementById("summaryText");
      const pageText = document.getElementById("pageText");
      const prevPageBtn = document.getElementById("prevPageBtn");
      const nextPageBtn = document.getElementById("nextPageBtn");
      const rowsPerPage = document.getElementById("rowsPerPage");
      const searchInput = document.getElementById("searchInput");
      const categoryFilter = document.getElementById("categoryFilter");
      const statusFilter = document.getElementById("statusFilter");

      async function loadSummary() {
        try {
          const endDate = new Date().toISOString().split("T")[0];
          const startDate = new Date(Date.now() - 365 * 24 * 60 * 60 * 1000)
            .toISOString()
            .split("T")[0];

          const response = await fetch(
            `/api/expenses/summary?startDate=${startDate}&endDate=${endDate}`
          );
          const result = await response.json();

          if (result.ok) {
            const data = result.data;
            document.getElementById("totalExpenses").textContent =
              "‚Çπ" + (data.totalExpenses || 0).toLocaleString("en-IN");
            document.getElementById("expenseCount").textContent =
              data.totalCount || 0;

            let paid = 0;
            let pending = 0;

            if (data.byPaymentStatus) {
              data.byPaymentStatus.forEach((status) => {
                if (status._id === "Paid") {
                  paid = status.total;
                } else if (status._id === "Pending") {
                  pending = status.total;
                } else if (status._id === "Partial") {
                  pending += status.total;
                }
              });
            }

            document.getElementById("paidAmount").textContent =
              "‚Çπ" + paid.toLocaleString("en-IN");
            document.getElementById("pendingAmount").textContent =
              "‚Çπ" + pending.toLocaleString("en-IN");
          }
        } catch (error) {
          console.error("Error loading summary:", error);
        }
      }

      async function fetchExpenses() {
        const params = new URLSearchParams({
          page: state.page,
          limit: state.limit,
        });

        if (state.q) params.append("q", state.q);
        if (state.category) params.append("category", state.category);
        if (state.paymentStatus)
          params.append("paymentStatus", state.paymentStatus);

        const res = await fetch("/api/expenses?" + params.toString(), {
          headers: { Accept: "application/json" },
        });

        const json = await res.json();
        if (!json.ok) {
          await Swal.fire({
            icon: "error",
            title: "Failed to load expenses",
            text:
              json.message || "Something went wrong while loading expenses.",
            background: "#151821",
            color: "#f9fafb",
            confirmButtonText: "OK",
            confirmButtonColor: "#4b63ff",
            customClass: {
              popup: "swal2-suit-popup",
              confirmButton: "swal2-suit-confirm",
            },
          });
          return;
        }

        state.total = json.pagination.total;
        state.totalPages = json.pagination.totalPages;
        renderTable(json.data);
        renderFooter(json.pagination);
      }

      function renderTable(rows) {
        tbody.innerHTML = "";

        if (!rows.length) {
          const tr = document.createElement("tr");
          const td = document.createElement("td");
          td.colSpan = 7;
          td.style.textAlign = "center";
          td.style.padding = "14px";
          td.textContent = "No expenses found.";
          tr.appendChild(td);
          tbody.appendChild(tr);
          return;
        }

        rows.forEach((e) => {
          const tr = document.createElement("tr");
          tr.dataset.id = e._id;

          // Expense Code
          const tdCode = document.createElement("td");
          const codeSpan = document.createElement("span");
          codeSpan.className = "expense-code";
          codeSpan.textContent = e.expenseCode || e._id;
          tdCode.appendChild(codeSpan);
          tr.appendChild(tdCode);

          // Date
          const tdDate = document.createElement("td");
          const dateSpan = document.createElement("span");
          dateSpan.className = "date-text";
          dateSpan.textContent = e.expenseDate
            ? new Date(e.expenseDate).toLocaleDateString("en-IN")
            : "-";
          tdDate.appendChild(dateSpan);
          tr.appendChild(tdDate);

          // Category
          const tdCategory = document.createElement("td");
          const categoryBadge = document.createElement("span");
          categoryBadge.className = "category-badge";
          categoryBadge.textContent = e.category || "-";
          tdCategory.appendChild(categoryBadge);
          tr.appendChild(tdCategory);

          // Description
          const tdDesc = document.createElement("td");
          tdDesc.textContent = e.description || "-";
          tdDesc.style.maxWidth = "200px";
          tdDesc.style.overflow = "hidden";
          tdDesc.style.textOverflow = "ellipsis";
          tr.appendChild(tdDesc);

          // Amount
          const tdAmount = document.createElement("td");
          tdAmount.className = "numeric-cell";
          const amountSpan = document.createElement("span");
          amountSpan.className = "currency";
          amountSpan.textContent =
            "‚Çπ" + (e.amount || 0).toLocaleString("en-IN");
          tdAmount.appendChild(amountSpan);
          tr.appendChild(tdAmount);

          // Payment Status
          const tdStatus = document.createElement("td");
          const statusBadge = document.createElement("span");
          statusBadge.classList.add("status-badge");
          const status = (e.paymentStatus || "").toLowerCase();
          if (status === "paid") statusBadge.classList.add("status-paid");
          else if (status === "pending")
            statusBadge.classList.add("status-pending");
          else if (status === "partial")
            statusBadge.classList.add("status-partial");
          statusBadge.textContent = e.paymentStatus || "Pending";
          tdStatus.appendChild(statusBadge);
          tr.appendChild(tdStatus);

          // Actions
          const tdActions = document.createElement("td");
          tdActions.className = "actions-cell";

          const btn = document.createElement("button");
          btn.type = "button";
          btn.className = "more-btn";
          btn.innerHTML = "&#8942;";
          btn.dataset.action = "menu";
          btn.dataset.id = e._id;

          const menu = document.createElement("div");
          menu.className = "row-menu";
          menu.innerHTML = `
            <div class="row-menu-item" data-action="view" data-id="${e._id}">View</div>
            <div class="row-menu-item" data-action="edit" data-id="${e._id}">Edit</div>
            <div class="row-menu-item delete" data-action="delete" data-id="${e._id}">Delete</div>
          `;

          tdActions.appendChild(btn);
          tdActions.appendChild(menu);
          tr.appendChild(tdActions);

          tbody.appendChild(tr);
        });
      }

      function renderFooter(p) {
        if (p.total === 0) {
          summaryText.textContent = "Showing 0‚Äì0 of 0 expenses";
        } else {
          summaryText.textContent = `Showing ${p.from}‚Äì${p.to} of ${p.total} expenses`;
        }
        pageText.textContent = `Page ${p.page} of ${p.totalPages}`;
        prevPageBtn.disabled = p.page <= 1;
        nextPageBtn.disabled = p.page >= p.totalPages;
      }

      prevPageBtn.addEventListener("click", () => {
        if (state.page <= 1) return;
        state.page -= 1;
        fetchExpenses();
      });

      nextPageBtn.addEventListener("click", () => {
        if (state.page >= state.totalPages) return;
        state.page += 1;
        fetchExpenses();
      });

      rowsPerPage.addEventListener("change", () => {
        state.limit = parseInt(rowsPerPage.value, 10) || 20;
        state.page = 1;
        fetchExpenses();
      });

      // Search debounce
      let searchTimer;
      searchInput.addEventListener("input", () => {
        clearTimeout(searchTimer);
        searchTimer = setTimeout(() => {
          state.q = searchInput.value.trim();
          state.page = 1;
          fetchExpenses();
        }, 300);
      });

      // Filter changes
      categoryFilter.addEventListener("change", () => {
        state.category = categoryFilter.value;
        state.page = 1;
        fetchExpenses();
      });

      statusFilter.addEventListener("change", () => {
        state.paymentStatus = statusFilter.value;
        state.page = 1;
        fetchExpenses();
      });

      // Actions: dots menu + delete
      function closeAllMenus() {
        document
          .querySelectorAll(".row-menu.open")
          .forEach((menu) => menu.classList.remove("open"));
      }

      tbody.addEventListener("click", async (e) => {
        const menuBtn = e.target.closest(".more-btn");
        const menuItem = e.target.closest(".row-menu-item");

        if (menuBtn) {
          const cell = menuBtn.parentElement;
          const menu = cell.querySelector(".row-menu");
          const isOpen = menu.classList.contains("open");
          closeAllMenus();
          if (!isOpen) menu.classList.add("open");
          e.stopPropagation();
          return;
        }

        if (!menuItem) return;

        const action = menuItem.dataset.action;
        const id = menuItem.dataset.id;
        closeAllMenus();

        if (action === "view") {
          window.location.href = `/expenses/${id}`;
          return;
        }

        if (action === "edit") {
          window.location.href = `/expenses/${id}/edit`;
          return;
        }

        if (action === "delete") {
          const result = await Swal.fire({
            title: "Delete expense?",
            text: "This action cannot be undone.",
            icon: "warning",
            background: "#151821",
            color: "#f9fafb",
            showCancelButton: true,
            confirmButtonText: "Yes, delete",
            cancelButtonText: "Cancel",
            confirmButtonColor: "#f97373",
            cancelButtonColor: "#222635",
            customClass: {
              popup: "swal2-suit-popup",
              confirmButton: "swal2-suit-confirm",
              cancelButton: "swal2-suit-cancel",
            },
          });

          if (!result.isConfirmed) return;

          try {
            const res = await fetch(`/api/expenses/${id}`, {
              method: "DELETE",
              headers: { Accept: "application/json" },
            });

            const json = await res.json();

            if (!json.ok) {
              await Swal.fire({
                icon: "error",
                title: "Delete failed",
                text: json.message || "Something went wrong while deleting.",
                background: "#151821",
                color: "#f9fafb",
                confirmButtonText: "OK",
                confirmButtonColor: "#4b63ff",
                customClass: {
                  popup: "swal2-suit-popup",
                  confirmButton: "swal2-suit-confirm",
                },
              });
              return;
            }

            await Swal.fire({
              icon: "success",
              title: "Deleted",
              text: json.message || "Expense deleted successfully.",
              background: "#151821",
              color: "#f9fafb",
              confirmButtonColor: "#4b63ff",
              customClass: {
                popup: "swal2-suit-popup",
                confirmButton: "swal2-suit-confirm",
              },
              timer: 1500,
              showConfirmButton: false,
            });

            fetchExpenses();
            loadSummary();
          } catch (err) {
            console.error(err);
            await Swal.fire({
              icon: "error",
              title: "Error",
              text: "Something went wrong while deleting.",
              background: "#151821",
              color: "#f9fafb",
              confirmButtonColor: "#4b63ff",
              customClass: {
                popup: "swal2-suit-popup",
                confirmButton: "swal2-suit-confirm",
              },
            });
          }
        }
      });

      // Close menus when clicking outside
      document.addEventListener("click", (e) => {
        if (!e.target.closest(".actions-cell")) {
          closeAllMenus();
        }
      });

      // Initial load
      loadSummary();
      fetchExpenses();
    </script>
  </body>
</html>
