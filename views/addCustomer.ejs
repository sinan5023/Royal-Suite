<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Add Customer - SuitManager Pro</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <style>
      :root {
        --bg-main: #0f1115;
        --bg-elevated: #151821;
        --bg-elevated-soft: #171a24;
        --sidebar-bg: #11131b;
        --sidebar-active: #1f2432;
        --border-subtle: #222633;
        --accent: #4b63ff;
        --accent-soft: #3744a9;
        --danger: #f97373;
        --success: #22c55e;
        --warning: #fbbf24;
        --text-main: #f9fafb;
        --text-soft: #9ca3af;
        --text-muted: #6b7280;
        --card-radius: 12px;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "SF Pro Text",
          "Segoe UI", sans-serif;
      }

      body {
        background: var(--bg-main);
        color: var(--text-main);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }

      /* Top bar */
      .topbar {
        height: 42px;
        background: #12131b;
        border-bottom: 1px solid #222436;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 16px;
        font-size: 11px;
        color: var(--text-soft);
      }

      .topbar-left {
        display: flex;
        align-items: center;
        gap: 8px;
      }

      .topbar-logo-pill {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 4px 10px;
        border-radius: 999px;
        background: #1b1f2a;
        border: 1px solid #252a3a;
        font-size: 11px;
      }

      .logo-square {
        width: 18px;
        height: 18px;
        border-radius: 6px;
        background: var(--accent);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 11px;
      }

      .topbar-center {
        flex: 1;
        text-align: center;
        font-size: 10px;
        color: var(--text-soft);
      }

      .topbar-right {
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 10px;
      }

      .topbar-pill {
        padding: 4px 10px;
        border-radius: 999px;
        background: #1b1f2a;
        border: 1px solid #252a3a;
        display: flex;
        align-items: center;
        gap: 6px;
      }

      .avatar-circle {
        width: 18px;
        height: 18px;
        border-radius: 999px;
        background: #374151;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 10px;
      }

      /* Main layout */
      .layout {
        display: flex;
        flex: 1;
        min-height: 0;
      }

      /* Sidebar */
      .sidebar {
        width: 230px;
        background: var(--sidebar-bg);
        border-right: 1px solid #181b27;
        display: flex;
        flex-direction: column;
      }

      .sidebar-header {
        padding: 14px 14px 10px;
        border-bottom: 1px solid #181b27;
        display: flex;
        align-items: center;
        gap: 8px;
      }

      .sidebar-header-logo {
        width: 26px;
        height: 26px;
        border-radius: 8px;
        background: var(--accent);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 15px;
      }

      .sidebar-header-text {
        font-size: 13px;
        font-weight: 600;
      }

      .sidebar-nav {
        padding: 10px 8px;
        flex: 1;
      }

      .sidebar-section-title {
        font-size: 11px;
        text-transform: uppercase;
        color: var(--text-muted);
        padding: 6px 8px;
        letter-spacing: 0.08em;
      }

      .sidebar-item {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 7px 10px;
        border-radius: 8px;
        color: var(--text-soft);
        font-size: 13px;
        cursor: pointer;
        margin-bottom: 4px;
        text-decoration: none;
      }

      .sidebar-item:hover {
        background: #191d28;
      }

      .sidebar-item.active {
        background: var(--sidebar-active);
        color: #e5e7eb;
      }

      .sidebar-icon {
        width: 18px;
        height: 18px;
        border-radius: 999px;
        background: #1f2937;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 11px;
      }

      .sidebar-footer {
        padding: 10px;
        border-top: 1px solid #181b27;
        font-size: 11px;
        color: var(--text-muted);
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .sidebar-collapse {
        font-size: 11px;
        display: flex;
        align-items: center;
        gap: 4px;
        cursor: pointer;
        color: var(--text-soft);
      }

      /* Content area */
      .content {
        flex: 1;
        padding: 14px 18px 18px;
        overflow-y: auto;
      }

      /* Page header */
      .page-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 16px;
      }

      .page-title {
        font-size: 18px;
        font-weight: 600;
      }

      .page-subtitle {
        font-size: 12px;
        color: var(--text-soft);
        margin-top: 2px;
      }

      /* Two column layout */
      .two-column-layout {
        display: grid;
        grid-template-columns: 280px 1fr;
        gap: 16px;
      }

      /* Left panel */
      .left-panel {
        display: flex;
        flex-direction: column;
        gap: 12px;
      }

      .panel-card {
        background: var(--bg-elevated);
        border-radius: var(--card-radius);
        border: 1px solid var(--border-subtle);
        padding: 12px;
      }

      .panel-title {
        font-size: 12px;
        font-weight: 500;
        margin-bottom: 10px;
      }

      .recent-list {
        display: flex;
        flex-direction: column;
        gap: 6px;
      }

      .recent-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 6px 8px;
        border-radius: 6px;
        background: #181b27;
        font-size: 11px;
      }

      .recent-name {
        flex: 1;
      }

      .recent-id {
        font-size: 10px;
        color: var(--text-muted);
      }

      .badge {
        padding: 2px 6px;
        border-radius: 4px;
        font-size: 10px;
        font-weight: 500;
      }

      .badge-active {
        background: #1e3a2e;
        color: var(--success);
      }

      .badge-blacklisted {
        background: #3b1a1f;
        color: var(--danger);
      }

      .badge-vip {
        background: #3b2d1f;
        color: var(--warning);
      }

      .action-icon {
        color: var(--text-muted);
        font-size: 12px;
        cursor: pointer;
      }

      .view-all-link {
        display: block;
        text-align: center;
        font-size: 11px;
        color: var(--accent);
        margin-top: 8px;
        cursor: pointer;
        text-decoration: none;
      }

      /* Form area */
      .form-container {
        background: var(--bg-elevated);
        border-radius: var(--card-radius);
        border: 1px solid var(--border-subtle);
        padding: 16px 18px;
      }

      .form-section {
        margin-bottom: 20px;
      }

      .form-section:last-child {
        margin-bottom: 0;
      }

      .section-title {
        font-size: 14px;
        font-weight: 600;
        margin-bottom: 12px;
        color: var(--text-main);
      }

      .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 12px;
        margin-bottom: 12px;
      }

      .form-row.single {
        grid-template-columns: 1fr;
      }

      .form-group {
        display: flex;
        flex-direction: column;
        gap: 6px;
      }

      .form-label {
        font-size: 12px;
        color: var(--text-soft);
      }

      .required {
        color: var(--danger);
      }

      .form-input,
      .form-select,
      .form-textarea {
        padding: 8px 10px;
        border-radius: 8px;
        border: 1px solid #222635;
        background: #11131c;
        color: var(--text-main);
        font-size: 12px;
      }

      .form-input:focus,
      .form-select:focus,
      .form-textarea:focus {
        outline: none;
        border-color: var(--accent);
      }

      .form-textarea {
        resize: vertical;
        min-height: 80px;
      }

      .phone-input-group {
        display: flex;
        gap: 8px;
      }

      .country-code {
        width: 80px;
      }

      .form-hint {
        font-size: 10px;
        color: var(--text-muted);
      }

      .toggle-group {
        display: flex;
        align-items: center;
        gap: 8px;
      }

      .toggle-switch {
        position: relative;
        width: 40px;
        height: 20px;
        background: #2a2d3a;
        border-radius: 999px;
        cursor: pointer;
        transition: background 0.2s;
      }

      .toggle-switch.active {
        background: var(--accent);
      }

      .toggle-slider {
        position: absolute;
        top: 2px;
        left: 2px;
        width: 16px;
        height: 16px;
        background: white;
        border-radius: 999px;
        transition: transform 0.2s;
      }

      .toggle-switch.active .toggle-slider {
        transform: translateX(20px);
      }

      .toggle-label {
        font-size: 12px;
        color: var(--text-soft);
      }

      /* Footer actions */
      .form-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 20px;
        padding-top: 16px;
        border-top: 1px solid var(--border-subtle);
      }

      .error-message {
        font-size: 11px;
        color: var(--danger);
        display: flex;
        align-items: center;
        gap: 6px;
      }

      .footer-actions {
        display: flex;
        gap: 10px;
      }

      .btn {
        padding: 8px 18px;
        border-radius: 8px;
        font-size: 12px;
        font-weight: 500;
        cursor: pointer;
        border: none;
        display: inline-flex;
        align-items: center;
        gap: 6px;
      }

      .btn-secondary {
        background: transparent;
        border: 1px solid #262b3c;
        color: var(--text-soft);
      }

      .btn-secondary:hover {
        background: #191d2a;
      }

      .btn-primary {
        background: var(--accent);
        color: white;
      }

      .btn-primary:hover {
        background: var(--accent-soft);
      }

      .smpro-swal-popup {
        border-radius: 12px;
        border: 1px solid #222633;
        box-shadow: 0 18px 40px rgba(0, 0, 0, 0.65);
      }

      .smpro-swal-title {
        font-size: 18px;
        font-weight: 600;
      }

      .smpro-swal-text {
        font-size: 13px;
        color: var(--text-soft);
      }

      .smpro-swal-confirm {
        border-radius: 8px !important;
        font-size: 13px !important;
        font-weight: 500 !important;
      }

      /* Responsive */
      @media (max-width: 1024px) {
        .two-column-layout {
          grid-template-columns: 1fr;
        }
        .left-panel {
          order: 2;
        }
      }

      @media (max-width: 768px) {
        .layout {
          flex-direction: column;
        }
        .sidebar {
          width: 100%;
          order: 2;
        }
        .content {
          order: 1;
        }
        .form-row {
          grid-template-columns: 1fr;
        }
      }
    </style>
  </head>
  <body>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Top bar -->
    <header class="topbar">
      <div class="topbar-left">
        <div class="topbar-logo-pill">
          <div class="logo-square">üß≥</div>
          <span>SuitManager Pro</span>
        </div>
      </div>
      <div class="topbar-center">
        <span
          ><%= greeting %>, <%= user.name %>. &nbsp; <%= user.role %> | <%=
          currentDate %></span
        >
      </div>
      <div class="topbar-right">
        <div class="topbar-pill">
          <span><%= user.role %> | <%= currentDate %></span>
        </div>
        <div class="avatar-circle">
          <%= user.name.charAt(0).toUpperCase() %>
        </div>
      </div>
    </header>

    <div class="layout">
      <!-- Sidebar -->
      <aside class="sidebar">
        <div class="sidebar-header">
          <div class="sidebar-header-logo">üß≥</div>
          <div class="sidebar-header-text">SuitManager Pro</div>
        </div>
        <div class="sidebar-nav">
          <div class="sidebar-section-title">Menu</div>
          <a href="/dashboard" class="sidebar-item">
            <div class="sidebar-icon">üè†</div>
            <span>Dashboard</span>
          </a>
          <a href="/calendar" class="sidebar-item">
            <div class="sidebar-icon">üìÖ</div>
            <span>Calendar</span>
          </a>
          <a href="/analytics" class="sidebar-item active">
            <div class="sidebar-icon">üìä</div>
            <span>Analytics</span>
          </a>
          <a href="/expenses" class="sidebar-item">
            <div class="sidebar-icon">üí∏</div>
            <span>Expenses</span>
          </a>
          <a href="/customers" class="sidebar-item">
            <div class="sidebar-icon">üë§</div>
            <span>Customers</span>
          </a>
          <a href="/bookings" class="sidebar-item">
            <div class="sidebar-icon">üì¶</div>
            <span>Bookings</span>
          </a>
          <a href="/inventory" class="sidebar-item">
            <div class="sidebar-icon">üìã</div>
            <span>Inventory</span>
          </a>
          <a href="/invoices" class="sidebar-item">
            <div class="sidebar-icon">üíº</div>
            <span>Invoices</span>
          </a>
        </div>
        <div class="sidebar-footer">
          <span>v1.0.0</span>
        </div>
      </aside>

      <!-- Content -->
      <main class="content">
        <!-- Page header -->
        <div class="page-header">
          <div>
            <div class="page-title">Customer Onboarding</div>
            <div class="page-subtitle">
              Manage customer details, search for existing clients, or onboard
              new ones efficiently.
            </div>
          </div>
        </div>

        <!-- Two column layout -->
        <div class="two-column-layout">
          <!-- Left panel -->
          <div class="left-panel">
            <!-- Recent Customers -->
            <div class="panel-card">
              <div class="panel-title">Recent Customers</div>
              <div class="recent-list">
                <% if (recentCustomers && recentCustomers.length > 0) { %> <%
                recentCustomers.forEach(customer => { %>
                <div class="recent-item">
                  <div class="recent-name"><%= customer.fullName %></div>
                  <div class="recent-id"><%= customer.Code %></div>
                  <span class="badge badge"
                    ><%= customer.status %> <%= customer.statusLabel %></span
                  >
                  <span class="action-icon">‚úè</span>
                </div>
                <% }) %> <% } else { %>
                <div class="form-hint">No recent customers</div>
                <% } %>
              </div>
              <a href="/customers" class="view-all-link">View All Customers</a>
            </div>
          </div>

          <!-- Form area -->
          <div class="form-container">
            <form method="POST" action="/customers">
              <!-- Personal Information -->
              <div class="form-section">
                <div class="section-title">Personal Information</div>
                <div class="form-row">
                  <div class="form-group">
                    <label class="form-label"
                      >Full Name <span class="required">*</span></label
                    >
                    <input
                      type="text"
                      name="fullName"
                      class="form-input"
                      placeholder="John Doe"
                      required
                    />
                    <div class="form-hint">Full Name as required</div>
                  </div>
                  <div class="form-group">
                    <label class="form-label"
                      >Gender <span class="required">*</span></label
                    >
                    <select name="gender" class="form-select" required>
                      <option value="">Select Gender</option>
                      <option value="male">Male</option>
                      <option value="female">Female</option>
                      <option value="other">Other</option>
                    </select>
                  </div>
                </div>
                <div class="form-row single">
                  <div class="form-group">
                    <label class="form-label"
                      >Date of Birth <span class="required">*</span></label
                    >
                    <input
                      type="date"
                      name="dateOfBirth"
                      class="form-input"
                      placeholder="Pick a date"
                      required
                    />
                  </div>
                </div>
              </div>

              <!-- Contact & Communication -->
              <div class="form-section">
                <div class="section-title">Contact & Communication</div>
                <div class="form-row">
                  <div class="form-group">
                    <label class="form-label"
                      >Mobile <span class="required">*</span></label
                    >
                    <div class="phone-input-group">
                      <select
                        name="countryCode"
                        class="form-select country-code"
                      >
                        <option value="+91">üáÆüá≥ +91</option>
                        <option value="+1">üá∫üá∏ +1</option>
                        <option value="+44">üá¨üáß +44</option>
                      </select>
                      <input
                        type="tel"
                        name="mobile"
                        class="form-input"
                        placeholder="10-digit mobile number"
                        required
                      />
                    </div>
                    <div class="form-hint">Primary contact number</div>
                  </div>
                  <div class="form-group">
                    <label class="form-label">Alternate Phone</label>
                    <div class="phone-input-group">
                      <select
                        name="altCountryCode"
                        class="form-select country-code"
                      >
                        <option value="+91">üáÆüá≥ +91</option>
                        <option value="+1">üá∫üá∏ +1</option>
                        <option value="+44">üá¨üáß +44</option>
                      </select>
                      <input
                        type="tel"
                        name="alternatePhone"
                        class="form-input"
                        placeholder="10-digit mobile number"
                      />
                    </div>
                    <div class="form-hint">
                      Optional alternate contact number
                    </div>
                  </div>
                </div>
                <div class="form-row">
                  <div class="form-group">
                    <label class="form-label"
                      >Email <span class="required">*</span></label
                    >
                    <input
                      type="email"
                      name="email"
                      class="form-input"
                      placeholder="john.doe@example.com"
                    />
                  </div>
                  <div class="form-group">
                    <label class="form-label"
                      >Preferred Contact Channel
                      <span class="required">*</span></label
                    >
                    <select
                      name="preferredContact"
                      class="form-select"
                      required
                    >
                      <option value="">Select Channel</option>
                      <option value="whatsapp">WhatsApp</option>
                      <option value="call">Call</option>
                      <option value="sms">SMS</option>
                      <option value="email">Email</option>
                    </select>
                  </div>
                </div>
                <div class="form-row single">
                  <div class="form-group">
                    <div class="toggle-group">
                      <div
                        class="toggle-switch"
                        onclick="this.classList.toggle('active')"
                      >
                        <div class="toggle-slider"></div>
                      </div>
                      <span class="toggle-label">WhatsApp Available</span>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Address Information -->
              <div class="form-section">
                <div class="section-title">Address Information</div>
                <div class="form-row single">
                  <div class="form-group">
                    <div class="toggle-group">
                      <input
                        type="checkbox"
                        name="enableDelivery"
                        id="enableDelivery"
                      />
                      <label for="enableDelivery" class="toggle-label">
                        Enable Delivery Address (Match billing fields as
                        required)
                      </label>
                    </div>
                  </div>
                </div>
                <div class="form-row single">
                  <div class="form-group">
                    <label class="form-label"
                      >Street Address <span class="required">*</span></label
                    >
                    <input
                      type="text"
                      name="streetAddress"
                      class="form-input"
                      placeholder="123 Main St"
                      required
                    />
                  </div>
                </div>
                <div class="form-row">
                  <div class="form-group">
                    <label class="form-label"
                      >City <span class="required">*</span></label
                    >
                    <input
                      type="text"
                      name="city"
                      value="Kozhikode"
                      class="form-input"
                      placeholder="Springfield"
                      required
                    />
                  </div>
                  <div class="form-group">
                    <label class="form-label"
                      >State/Region <span class="required">*</span></label
                    >
                    <input
                      type="text"
                      name="state"
                      class="form-input"
                      placeholder="State/Region"
                      value="Kerala"
                      required
                    />
                  </div>
                </div>
                <div class="form-row">
                  <div class="form-group">
                    <label class="form-label"
                      >Postal Code <span class="required">*</span></label
                    >
                    <input
                      type="text"
                      name="postalCode"
                      class="form-input"
                      placeholder="123456"
                      value="123456"
                      required
                    />
                  </div>
                  <div class="form-group">
                    <label class="form-label"
                      >Country <span class="required">*</span></label
                    >
                    <input
                      type="text"
                      name="country"
                      class="form-input"
                      placeholder="Country"
                      value="India"
                      required
                    />
                  </div>
                </div>
              </div>

              <!-- Other Notes -->
              <div class="form-section">
                <div class="section-title">Other Notes</div>
                <div class="form-row single">
                  <div class="form-group">
                    <label class="form-label"
                      >Customer Notes (Visible to staff and customers)</label
                    >
                    <textarea
                      name="customerNotes"
                      class="form-textarea"
                      placeholder="e.g. Driver's License: ABC12345, prefers calls over email."
                    ></textarea>
                  </div>
                </div>
                <div class="form-row single">
                  <div class="form-group">
                    <label class="form-label"
                      >Internal Flags (Visible only to staff)</label
                    >
                    <textarea
                      name="internalFlags"
                      class="form-textarea"
                      placeholder="e.g. High-value client, requires manager approval for discounts."
                    ></textarea>
                  </div>
                </div>
              </div>

              <!-- Footer -->
              <div class="form-footer">
                <div class="error-message" style="opacity: 0">
                  ‚ö† 2 required fields missing: Full Name, Mobile (10-digits)
                </div>
                <div class="footer-actions">
                  <button
                    type="button"
                    class="btn btn-secondary"
                    onclick="window.history.back()"
                  >
                    Switch to Edit Mode
                  </button>
                  <button type="submit" class="btn btn-primary">
                    ‚úì Create Customer
                  </button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </main>
    </div>

    <script>
      // Form validation rules
      const validationRules = {
        fullName: {
          required: true,
          minLength: 2,
          message: "Full name is required (min 2 characters)",
        },
        gender: {
          required: true,
          message: "Gender is required",
        },
        // Treat DOB as string and enforce YYYY-MM-DD with 4-digit year
        dateOfBirth: {
          required: true,
          // basic pattern: 4-digit year, 2-digit month, 2-digit day
          pattern: /^\d{4}-\d{2}-\d{2}$/,
          message: "Date of birth must be a valid date with 4‚Äëdigit year",
        },
        mobile: {
          required: true,
          pattern: /^[0-9]{10}$/,
          message: "Mobile must be exactly 10 digits",
        },
        preferredContact: {
          required: true,
          message: "Preferred contact channel is required",
        },
        alternatePhone: {
          required: false,
          pattern: /^[0-9]{10}$/,
          message: "Alternate phone must be 10 digits",
        },
        streetAddress: {
          required: true,
          message: "Street address is required",
        },
        city: {
          required: true,
          message: "City is required",
        },
        state: {
          required: true,
          message: "State/Region is required",
        },
        postalCode: {
          required: true,
          pattern: /^[0-9]{6}$/,
          message: "Postal code must be 6 digits",
        },
        country: {
          required: true,
          message: "Country is required",
        },
        // customerNotes and internalFlags are optional
      };

      // Add error display elements
      function addErrorDisplay() {
        document.querySelectorAll(".form-group").forEach((group) => {
          const input = group.querySelector("input, select, textarea");
          if (input && !group.querySelector(".field-error")) {
            const errorDiv = document.createElement("div");
            errorDiv.className = "field-error";
            errorDiv.style.cssText =
              "font-size: 10px; color: var(--danger); margin-top: 2px; display: none;";
            group.appendChild(errorDiv);
          }
        });
      }

      function showFieldError(input, message) {
        const formGroup = input.closest(".form-group");
        const errorDiv = formGroup.querySelector(".field-error");

        input.style.borderColor = "var(--danger)";
        if (errorDiv) {
          errorDiv.textContent = message;
          errorDiv.style.display = "block";
        }
      }

      function clearFieldError(input) {
        const formGroup = input.closest(".form-group");
        const errorDiv = formGroup.querySelector(".field-error");

        input.style.borderColor = "#222635";
        if (errorDiv) {
          errorDiv.style.display = "none";
        }
      }

      // Extra DOB logic: 4-digit year and realistic bounds
      function validateDobValue(raw) {
        // Expect YYYY-MM-DD
        if (!/^\d{4}-\d{2}-\d{2}$/.test(raw)) return false;

        const [yearStr, monthStr, dayStr] = raw.split("-");
        const year = Number(yearStr);
        const month = Number(monthStr);
        const day = Number(dayStr);

        // year must be 4 digits and between 1900 and current year
        const currentYear = new Date().getFullYear();
        if (year < 1900 || year > currentYear) return false;

        // Basic month/day sanity check
        if (month < 1 || month > 12) return false;
        if (day < 1 || day > 31) return false;

        return true;
      }

      // Validate single field
      function validateField(input) {
        const name = input.name;
        const value = input.value.trim();
        const rule = validationRules[name];

        if (!rule) return true;

        clearFieldError(input);

        // Required check
        if (rule.required && !value) {
          showFieldError(input, rule.message);
          return false;
        }

        // Skip pattern check if field is optional and empty
        if (!rule.required && !value) return true;

        // Special case: dateOfBirth with extra year logic
        if (name === "dateOfBirth") {
          if (!validateDobValue(value)) {
            showFieldError(
              input,
              "Date of birth must be a valid date with 4‚Äëdigit year between 1900 and this year"
            );
            return false;
          }
          return true;
        }

        // Pattern check
        if (rule.pattern && value && !rule.pattern.test(value)) {
          showFieldError(input, rule.message);
          return false;
        }

        // Min length check
        if (rule.minLength && value.length < rule.minLength) {
          showFieldError(input, rule.message);
          return false;
        }

        return true;
      }

      function validateForm() {
        const form = document.querySelector("form");
        const inputs = form.querySelectorAll(
          "input[name], select[name], textarea[name]"
        );
        let isValid = true;
        const errors = [];

        inputs.forEach((input) => {
          if (!validateField(input)) {
            isValid = false;
            const rule = validationRules[input.name];
            if (rule && rule.required) {
              errors.push(input.name);
            }
          }
        });

        const errorMsg = document.querySelector(".error-message");
        if (!isValid && errors.length > 0) {
          const fieldNames = errors.map((name) => {
            if (name === "fullName") return "Full Name";
            if (name === "mobile") return "Mobile"; 
            if (name === "gender") return "Gender";
            if (name === "dateOfBirth") return "Date of Birth";
            if (name === "preferredContact") return "Preferred Contact";
            if (name === "streetAddress") return "Street Address";
            if (name === "city") return "City";
            if (name === "state") return "State/Region";
            if (name === "postalCode") return "Postal Code";
            if (name === "country") return "Country";
            return name;
          });
          errorMsg.style.opacity = "1";
          errorMsg.textContent = `‚ö† ${errors.length} required field${
            errors.length > 1 ? "s" : ""
          } missing: ${fieldNames.join(", ")}`;
        } else if (!isValid) {
          errorMsg.style.opacity = "1";
          errorMsg.textContent = "‚ö† Please fix the errors above";
        } else {
          errorMsg.style.opacity = "0";
        }

        return isValid;
      }

      document.addEventListener("DOMContentLoaded", () => {
        addErrorDisplay();

        const form = document.querySelector("form");

        form
          .querySelectorAll("input[name], select[name], textarea[name]")
          .forEach((input) => {
            input.addEventListener("blur", () => validateField(input));
            input.addEventListener("input", () => {
              if (input.style.borderColor === "rgb(249, 115, 115)") {
                clearFieldError(input);
              }
            });
          });

        const mobileInput = form.querySelector('input[name="mobile"]');
        mobileInput.addEventListener("input", (e) => {
          e.target.value = e.target.value.replace(/\D/g, "").slice(0, 10);
        });

        const altPhoneInput = form.querySelector(
          'input[name="alternatePhone"]'
        );
        if (altPhoneInput) {
          altPhoneInput.addEventListener("input", (e) => {
            e.target.value = e.target.value.replace(/\D/g, "").slice(0, 10);
          });
        }

        const postalInput = form.querySelector('input[name="postalCode"]');
        if (postalInput) {
          postalInput.addEventListener("input", (e) => {
            e.target.value = e.target.value.replace(/\D/g, "").slice(0, 6);
          });
        }

        form.addEventListener("submit", async (e) => {
          e.preventDefault();
          if (!validateForm()) return;

          const errorMsg = document.querySelector(".error-message");
          const submitBtn = form.querySelector(".btn-primary");

          submitBtn.disabled = true;
          submitBtn.innerHTML = "<span>‚è≥</span> Creating...";

          const formData = new FormData(form);
          const data = {};

          formData.forEach((value, key) => {
            data[key] = typeof value === "string" ? value.trim() : value;
          });

          const whatsappToggle = document.querySelector(".toggle-switch");
          data.whatsappAvailable = whatsappToggle.classList.contains("active");

          data.primaryMobile = data.countryCode + data.mobile;
          delete data.countryCode;
          delete data.mobile;

          if (data.alternatePhone) {
            data.alternateMobile =
              (data.altCountryCode || "+91") + data.alternatePhone;
          } else {
            data.alternateMobile = null;
          }
          delete data.altCountryCode;

          data.street = data.streetAddress;
          delete data.streetAddress;

          try {
            const response = await fetch("/api/customers", {
              method: "POST",
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify(data),
              credentials: "include",
            });

            const result = await response.json();

            if (response.ok) {
              await Swal.fire({
                title: "Customer Created",
                text: "The customer has been added successfully.",
                icon: "success",
                background: "#151821",
                color: "#f9fafb",
                iconColor: "#22c55e",
                confirmButtonText: "Go to Customer",
                confirmButtonColor: "#4b63ff",
                customClass: {
                  popup: "smpro-swal-popup",
                  title: "smpro-swal-title",
                  htmlContainer: "smpro-swal-text",
                  confirmButton: "smpro-swal-confirm",
                },
              });
              window.location.href = `/customers`;
            } else {
              errorMsg.style.opacity = "1";
              errorMsg.textContent = `‚ö† ${
                result.message || "Failed to create customer"
              }`;
              submitBtn.disabled = false;
              submitBtn.innerHTML = "‚úì Create Customer";
            }
          } catch (error) {
            console.error("Error creating customer:", error);
            errorMsg.style.opacity = "1";
            errorMsg.textContent = "‚ö† Network error. Please try again.";
            submitBtn.disabled = false;
            submitBtn.innerHTML = "‚úì Create Customer";
          }
        });
      });
    </script>
  </body>
