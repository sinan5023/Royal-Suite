        <script>
      // Form validation rules
      const validationRules = {
        fullName: {
          required: true,
          minLength: 2,
          message: 'Full name is required (min 2 characters)'
        },
        mobile: {
          required: true,
          pattern: /^\d{10}$/,
          message: 'Mobile must be exactly 10 digits'
        },
        email: {
          required: false,
          pattern: /^\S+@\S+\.\S+$/,
          message: 'Please enter a valid email address'
        },
        alternatePhone: {
          required: false,
          pattern: /^\d{10}$/,
          message: 'Alternate phone must be 10 digits'
        },
        postalCode: {
          required: false,
          pattern: /^\d{6}$/,
          message: 'Postal code must be 6 digits'
        }
      };

      // Add error display elements
      function addErrorDisplay() {
        document.querySelectorAll('.form-group').forEach(group => {
          const input = group.querySelector('input, select, textarea');
          if (input && !group.querySelector('.field-error')) {
            const errorDiv = document.createElement('div');
            errorDiv.className = 'field-error';
            errorDiv.style.cssText = 'font-size: 10px; color: var(--danger); margin-top: 2px; display: none;';
            group.appendChild(errorDiv);
          }
        });
      }

      // Show field error
      function showFieldError(input, message) {
        const formGroup = input.closest('.form-group');
        const errorDiv = formGroup.querySelector('.field-error');
        
        input.style.borderColor = 'var(--danger)';
        if (errorDiv) {
          errorDiv.textContent = message;
          errorDiv.style.display = 'block';
        }
      }

      // Clear field error
      function clearFieldError(input) {
        const formGroup = input.closest('.form-group');
        const errorDiv = formGroup.querySelector('.field-error');
        
        input.style.borderColor = '#222635';
        if (errorDiv) {
          errorDiv.style.display = 'none';
        }
      }

      // Validate single field
      function validateField(input) {
        const name = input.name;
        const value = input.value.trim();
        const rule = validationRules[name];
        
        if (!rule) return true;

        clearFieldError(input);

        // Required check
        if (rule.required && !value) {
          showFieldError(input, rule.message);
          return false;
        }

        // Skip pattern check if field is optional and empty
        if (!rule.required && !value) return true;

        // Pattern check
        if (rule.pattern && value && !rule.pattern.test(value)) {
          showFieldError(input, rule.message);
          return false;
        }

        // Min length check
        if (rule.minLength && value.length < rule.minLength) {
          showFieldError(input, rule.message);
          return false;
        }

        return true;
      }

      // Validate entire form
      function validateForm() {
        const form = document.querySelector('form');
        const inputs = form.querySelectorAll('input[name], select[name], textarea[name]');
        let isValid = true;
        const errors = [];

        inputs.forEach(input => {
          if (!validateField(input)) {
            isValid = false;
            const rule = validationRules[input.name];
            if (rule && rule.required) {
              errors.push(input.name);
            }
          }
        });

        // Update footer error message
        const errorMsg = document.querySelector('.error-message');
        if (!isValid && errors.length > 0) {
          const fieldNames = errors.map(name => {
            if (name === 'fullName') return 'Full Name';
            if (name === 'mobile') return 'Mobile';
            return name;
          });
          errorMsg.style.opacity = '1';
          errorMsg.textContent = `‚ö† ${errors.length} required field${errors.length > 1 ? 's' : ''} missing: ${fieldNames.join(', ')}`;
        } else if (!isValid) {
          errorMsg.style.opacity = '1';
          errorMsg.textContent = '‚ö† Please fix the errors above';
        } else {
          errorMsg.style.opacity = '0';
        }

        return isValid;
      }

      // Initialize validation
      document.addEventListener('DOMContentLoaded', () => {
        addErrorDisplay();

        const form = document.querySelector('form');
        
        // Real-time validation on blur
        form.querySelectorAll('input[name], select[name], textarea[name]').forEach(input => {
          input.addEventListener('blur', () => validateField(input));
          
          // Clear error on input
          input.addEventListener('input', () => {
            if (input.style.borderColor === 'rgb(249, 115, 115)') {
              clearFieldError(input);
            }
          });
        });

        // Mobile number: only allow digits, max 10
        const mobileInput = form.querySelector('input[name="mobile"]');
        mobileInput.addEventListener('input', (e) => {
          e.target.value = e.target.value.replace(/\D/g, '').slice(0, 10);
        });

        // Alternate phone: only allow digits, max 10
        const altPhoneInput = form.querySelector('input[name="alternatePhone"]');
        if (altPhoneInput) {
          altPhoneInput.addEventListener('input', (e) => {
            e.target.value = e.target.value.replace(/\D/g, '').slice(0, 10);
          });
        }

        // Postal code: only allow digits, max 6
        const postalInput = form.querySelector('input[name="postalCode"]');
        if (postalInput) {
          postalInput.addEventListener('input', (e) => {
            e.target.value = e.target.value.replace(/\D/g, '').slice(0, 6);
          });
        }

        // Form submission with AJAX
        form.addEventListener('submit', async (e) => {
          e.preventDefault();
          
          // Validate form before submission
          if (!validateForm()) {
            return;
          }
          
          const errorMsg = document.querySelector('.error-message');
          const submitBtn = form.querySelector('.btn-primary');
          
          // Disable submit button
          submitBtn.disabled = true;
          submitBtn.innerHTML = '<span>‚è≥</span> Creating...';
          
          // Gather form data
          const formData = new FormData(form);
          const data = {};
          
          // Convert FormData to plain object
          formData.forEach((value, key) => {
            data[key] = value.trim();
          });
          
          // Handle WhatsApp toggle
          const whatsappToggle = document.querySelector('.toggle-switch');
          data.whatsappAvailable = whatsappToggle.classList.contains('active');
          
          // Combine country code with mobile
          data.primaryMobile = data.countryCode + data.mobile;
          delete data.countryCode;
          delete data.mobile;
          
          // Rename fields to match schema
          data.street = data.streetAddress;
          delete data.streetAddress;
          
          try {
            const response = await fetch('/api/customers/add', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json'
              },
              body: JSON.stringify(data),
              credentials: 'include'
            });
            
            const result = await response.json();
            
            if (response.ok) {
              // Success
              submitBtn.innerHTML = '<span>‚úì</span> Created!';
              submitBtn.style.background = 'var(--success)';
              
              // Redirect after short delay
              setTimeout(() => {
                window.location.href = `/customers/${result.customer._id}`;
              }, 500);
            } else {
              // Show error
              errorMsg.style.opacity = '1';
              errorMsg.textContent = `‚ö† ${result.message || 'Failed to create customer'}`;
              
              // Re-enable submit button
              submitBtn.disabled = false;
              submitBtn.innerHTML = '‚úì Create Customer';
            }
          } catch (error) {
            console.error('Error creating customer:', error);
            errorMsg.style.opacity = '1';
            errorMsg.textContent = '‚ö† Network error. Please try again.';
            
            // Re-enable submit button
            submitBtn.disabled = false;
            submitBtn.innerHTML = '‚úì Create Customer';
          }
        });
      });
    </script>
