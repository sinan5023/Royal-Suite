<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Bookings - SuitManager Pro</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- SweetAlert2 CDN -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
      :root {
        --bg-main: #0f1115;
        --bg-elevated: #151821;
        --bg-elevated-soft: #171a24;
        --sidebar-bg: #11131b;
        --sidebar-active: #1f2432;
        --border-subtle: #222633;
        --accent: #4b63ff;
        --accent-soft: #3744a9;
        --danger: #f97373;
        --success: #22c55e;
        --warning: #fbbf24;
        --info: #60a5fa;
        --text-main: #f9fafb;
        --text-soft: #9ca3af;
        --text-muted: #6b7280;
        --card-radius: 12px;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "SF Pro Text",
          "Segoe UI", sans-serif;
      }

      body {
        background: var(--bg-main);
        color: var(--text-main);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }

      /* Top bar */
      .topbar {
        height: 42px;
        background: #12131b;
        border-bottom: 1px solid #222436;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 16px;
        font-size: 11px;
        color: var(--text-soft);
      }

      .topbar-left {
        display: flex;
        align-items: center;
        gap: 8px;
      }

      .topbar-logo-pill {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 4px 10px;
        border-radius: 999px;
        background: #1b1f2a;
        border: 1px solid #252a3a;
        font-size: 11px;
      }

      .logo-square {
        width: 18px;
        height: 18px;
        border-radius: 6px;
        background: var(--accent);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 11px;
      }

      .topbar-center {
        flex: 1;
        text-align: center;
        font-size: 10px;
        color: var(--text-soft);
      }

      .topbar-right {
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 10px;
      }

      .topbar-pill {
        padding: 4px 10px;
        border-radius: 999px;
        background: #1b1f2a;
        border: 1px solid #252a3a;
        display: flex;
        align-items: center;
        gap: 6px;
      }

      .avatar-circle {
        width: 18px;
        height: 18px;
        border-radius: 999px;
        background: #374151;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 10px;
      }

      /* Main layout */
      .layout {
        display: flex;
        flex: 1;
        min-height: 0;
      }

      /* Sidebar */
      .sidebar {
        width: 230px;
        background: var(--sidebar-bg);
        border-right: 1px solid #181b27;
        display: flex;
        flex-direction: column;
      }

      .sidebar-header {
        padding: 14px 14px 10px;
        border-bottom: 1px solid #181b27;
        display: flex;
        align-items: center;
        gap: 8px;
      }

      .sidebar-header-logo {
        width: 26px;
        height: 26px;
        border-radius: 8px;
        background: var(--accent);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 15px;
      }

      .sidebar-header-text {
        font-size: 13px;
        font-weight: 600;
      }

      .sidebar-nav {
        padding: 10px 8px;
        flex: 1;
      }

      .sidebar-section-title {
        font-size: 11px;
        text-transform: uppercase;
        color: var(--text-muted);
        padding: 6px 8px;
        letter-spacing: 0.08em;
      }

      .sidebar-item {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 7px 10px;
        border-radius: 8px;
        color: var(--text-soft);
        font-size: 13px;
        cursor: pointer;
        margin-bottom: 4px;
        text-decoration: none;
      }

      .sidebar-item:hover {
        background: #191d28;
      }

      .sidebar-item.active {
        background: var(--sidebar-active);
        color: #e5e7eb;
      }

      .sidebar-icon {
        width: 18px;
        height: 18px;
        border-radius: 999px;
        background: #1f2937;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 11px;
      }

      .sidebar-footer {
        padding: 10px;
        border-top: 1px solid #181b27;
        font-size: 11px;
        color: var(--text-muted);
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .sidebar-collapse {
        font-size: 11px;
        display: flex;
        align-items: center;
        gap: 4px;
        cursor: pointer;
        color: var(--text-soft);
      }

      /* Content */
      .content {
        flex: 1;
        padding: 14px 18px 18px;
        overflow-y: auto;
      }

      .page-header-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 14px;
      }

      .page-header-texts {
        display: flex;
        flex-direction: column;
        gap: 4px;
      }

      .page-title {
        font-size: 18px;
        font-weight: 600;
      }

      .page-subtitle {
        font-size: 12px;
        color: var(--text-soft);
      }

      .btn-primary {
        padding: 8px 14px;
        border-radius: 999px;
        border: none;
        background: var(--accent);
        color: #f9fafb;
        font-size: 12px;
        font-weight: 500;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        text-decoration: none;
      }

      .btn-primary:hover {
        background: var(--accent-soft);
      }

      .btn-icon {
        font-size: 13px;
      }

      /* Search and filter row */
      .search-filter-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 10px;
        gap: 10px;
      }

      .search-box-wrapper {
        flex: 1;
        display: flex;
        align-items: center;
        gap: 6px;
        background: #11131c;
        border-radius: 999px;
        border: 1px solid #222635;
        padding: 6px 10px;
        font-size: 12px;
        color: var(--text-soft);
      }

      .search-input {
        flex: 1;
        background: transparent;
        border: none;
        outline: none;
        color: var(--text-main);
        font-size: 12px;
      }

      .filter-btn {
        padding: 6px 12px;
        border-radius: 999px;
        border: 1px solid #222635;
        background: #11131c;
        color: var(--text-soft);
        font-size: 12px;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 6px;
      }

      .filter-btn:hover {
        background: #191d2a;
      }

      /* Table card */
      .table-card {
        background: var(--bg-elevated);
        border-radius: var(--card-radius);
        border: 1px solid var(--border-subtle);
        overflow: hidden;
        margin-bottom: 12px;
      }

      .table {
        width: 100%;
        border-collapse: collapse;
        font-size: 12px;
      }

      .table thead {
        background: #161924;
      }

      .table th,
      .table td {
        padding: 10px 12px;
        border-bottom: 1px solid #1f2330;
        text-align: left;
        white-space: nowrap;
      }

      .table th {
        font-size: 11px;
        color: var(--text-soft);
        font-weight: 500;
      }

      .table tbody tr:nth-child(even) {
        background: #151924;
      }

      .table tbody tr:nth-child(odd) {
        background: #141720;
      }

      .table tbody tr:hover {
        background: #1b1f2c;
      }

      .booking-id {
        color: #60a5fa;
        font-size: 12px;
        font-weight: 500;
      }

      .customer-name {
        color: #e5e7eb;
        font-size: 12px;
      }

      .date-text {
        font-size: 12px;
        color: var(--text-main);
      }

      .status-badge {
        display: inline-block;
        padding: 3px 8px;
        border-radius: 999px;
        font-size: 11px;
        font-weight: 500;
      }

      .status-confirmed {
        background: #1e3a2e;
        color: var(--success);
      }

      .status-draft {
        background: #2d2d3b;
        color: #9ca3af;
      }

      .status-completed {
        background: #1e293b;
        color: var(--info);
      }

      .status-cancelled {
        background: #3b1a1f;
        color: var(--danger);
      }

      .payment-badge {
        display: inline-block;
        padding: 3px 8px;
        border-radius: 999px;
        font-size: 11px;
        font-weight: 500;
      }

      .payment-paid {
        background: #1e3a2e;
        color: var(--success);
      }

      .payment-unpaid {
        background: #3b1f2f;
        color: var(--danger);
      }

      .payment-partial {
        background: #3b2d1f;
        color: var(--warning);
      }

      .numeric-cell {
        text-align: right;
      }

      .currency {
        font-variant-numeric: tabular-nums;
      }

      .actions-cell {
        text-align: right;
        position: relative;
        width: 60px;
      }

      .more-btn {
        border: none;
        background: transparent;
        color: #9ca3af;
        cursor: pointer;
        font-size: 16px;
        padding: 0 4px;
      }

      .more-btn:hover {
        color: #e5e7eb;
      }

      .row-menu {
        position: absolute;
        right: 8px;
        top: 24px;
        min-width: 120px;
        background: #11131c;
        border-radius: 8px;
        border: 1px solid #222635;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.6);
        z-index: 20;
        display: none;
      }

      .row-menu.open {
        display: block;
      }

      .row-menu-item {
        padding: 6px 10px;
        font-size: 11px;
        color: #e5e7eb;
        cursor: pointer;
        text-align: left;
      }

      .row-menu-item:hover {
        background: #1f2933;
      }

      .row-menu-item.delete {
        color: #f97373;
      }

      /* Footer / pagination */
      .table-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 8px 12px;
        font-size: 11px;
        color: var(--text-soft);
      }

      .rows-per-page {
        display: inline-flex;
        align-items: center;
        gap: 6px;
      }

      .rows-select {
        background: #11131c;
        border: 1px solid #222635;
        border-radius: 6px;
        color: var(--text-main);
        font-size: 11px;
        padding: 4px 6px;
      }

      .pagination {
        display: inline-flex;
        align-items: center;
        gap: 8px;
      }

      .page-button {
        padding: 4px 8px;
        border-radius: 999px;
        border: 1px solid #222635;
        background: #11131c;
        color: #9ca3af;
        font-size: 11px;
        cursor: pointer;
      }

      .page-button[disabled] {
        opacity: 0.4;
        cursor: default;
      }

      .page-button:hover:not([disabled]) {
        background: #191d2a;
      }

      /* SweetAlert2 overrides */
      .swal2-popup.swal2-suit-popup {
        background: #151821;
        border-radius: 12px;
        border: 1px solid #222633;
        color: #f9fafb;
        box-shadow: 0 18px 45px rgba(0, 0, 0, 0.75);
      }

      .swal2-title {
        font-size: 16px;
        font-weight: 600;
      }

      .swal2-html-container {
        font-size: 12px;
        color: #9ca3af;
      }

      .swal2-actions {
        gap: 8px;
      }

      .swal2-suit-confirm {
        border-radius: 999px !important;
        font-size: 12px !important;
        padding: 6px 14px !important;
      }

      .swal2-suit-cancel {
        border-radius: 999px !important;
        font-size: 12px !important;
        padding: 6px 14px !important;
        border: 1px solid #222635 !important;
        background: #11131c !important;
        color: #e5e7eb !important;
      }

      @media (max-width: 900px) {
        .layout {
          flex-direction: column;
        }
        .sidebar {
          width: 100%;
          order: 2;
        }
        .content {
          order: 1;
        }
        .table {
          font-size: 11px;
        }
        .table th,
        .table td {
          padding: 8px 8px;
        }
      }
    </style>
  </head>
  <body>
    <!-- Top bar -->
    <header class="topbar">
      <div class="topbar-left">
        <div class="topbar-logo-pill">
          <div class="logo-square">üß≥</div>
          <span>SuitManager Pro</span>
        </div>
      </div>
      <div class="topbar-center">
        <span><%= greeting %>, <%= user.name %>. &nbsp; <%= user.role %> | <%= currentDate %></span>
      </div>
      <div class="topbar-right">
        <div class="topbar-pill">
          <span><%= user.role %> | <%= currentDate %></span>
        </div>
        <div class="avatar-circle">
          <%= user.name.charAt(0).toUpperCase() %>
        </div>
      </div>
    </header>

    <div class="layout">
      <!-- Sidebar -->
      <aside class="sidebar">
        <div class="sidebar-header">
          <div class="sidebar-header-logo">üß≥</div>
          <div class="sidebar-header-text">SuitManager Pro</div>
        </div>
        <div class="sidebar-nav">
          <div class="sidebar-section-title">Menu</div>

          <a href="/dashboard" class="sidebar-item">
            <div class="sidebar-icon">üè†</div>
            <span>Dashboard</span>
          </a>
          <a href="/customers" class="sidebar-item">
            <div class="sidebar-icon">üë§</div>
            <span>Customers</span>
          </a>
          <a href="/bookings" class="sidebar-item active">
            <div class="sidebar-icon">üì¶</div>
            <span>Bookings</span>
          </a>
          <a href="/expenses" class="sidebar-item">
            <div class="sidebar-icon">üí≥</div>
            <span>Sales &amp; Expenses</span>
          </a>
          <a href="/inventory" class="sidebar-item">
            <div class="sidebar-icon">üìã</div>
            <span>Inventory</span>
          </a>
          <a href="/invoices" class="sidebar-item">
            <div class="sidebar-icon">üíº</div>
            <span>invoices</span>
          </a>
        </div>
        <div class="sidebar-footer">
          <span>v1.0.0</span>
          <div class="sidebar-collapse">‚¨Ö Collapse</div>
        </div>
      </aside>

      <!-- Content -->
      <main class="content">
        <div class="page-header-row">
          <div class="page-header-texts">
            <div class="page-title">Bookings</div>
            <div class="page-subtitle">Search, filter, and manage all bookings.</div>
          </div>
          <a href="/bookings/new" class="btn-primary">
            <span class="btn-icon">üì¶+</span>
            <span>New Booking</span>
          </a>
        </div>

        <!-- Search and Filter -->
        <div class="search-filter-row">
          <div class="search-box-wrapper">
            <span>üîç</span>
            <input
              type="text"
              id="searchInput"
              class="search-input"
              placeholder="Search Booking ID or Customer..."
            />
          </div>
          <button class="filter-btn" id="filterBtn">
            <span>üéö</span>
            <span>Filter</span>
          </button>
        </div>

        <!-- Table (AJAX filled) -->
        <div class="table-card">
          <table class="table">
            <thead>
              <tr>
                <th>Booking ID</th>
                <th>Customer Name</th>
                <th>Event Date</th>
                <th>Pickup Date</th>
                <th>Return Date</th>
                <th>Items Summary</th>
                <th>Booking Status</th>
                <th>Payment Status / Outstanding</th>
                <th class="numeric-cell">Actions</th>
              </tr>
            </thead>
            <tbody id="bookingsBody">
              <!-- rows injected by JS -->
            </tbody>
          </table>

          <!-- Footer / pagination -->
          <div class="table-footer">
            <div id="summaryText">Showing 0‚Äì0 of 0 bookings</div>
            <div>
              <span class="rows-per-page">
                <span>Rows per page:</span>
                <select class="rows-select" id="rowsPerPage">
                  <option value="20" selected>20</option>
                  <option value="10">10</option>
                  <option value="25">25</option>
                  <option value="50">50</option>
                </select>
              </span>
              <span style="margin-left: 16px" id="pageText">Page 1 of 1</span>
              <span class="pagination" style="margin-left: 12px">
                <button class="page-button" id="prevPageBtn" disabled>‚Äπ Previous</button>
                <button class="page-button" id="nextPageBtn" disabled>Next ‚Ä∫</button>
              </span>
            </div>
          </div>
        </div>
      </main>
    </div>

    <script>
      const state = {
        page: 1,
        limit: 20,
        total: 0,
        totalPages: 1,
        q: "",
      };

      const tbody = document.getElementById("bookingsBody");
      const summaryText = document.getElementById("summaryText");
      const pageText = document.getElementById("pageText");
      const prevPageBtn = document.getElementById("prevPageBtn");
      const nextPageBtn = document.getElementById("nextPageBtn");
      const rowsPerPage = document.getElementById("rowsPerPage");
      const searchInput = document.getElementById("searchInput");

      async function fetchBookings() {
        const params = new URLSearchParams({
          page: state.page,
          limit: state.limit,
          q: state.q,
        });

        const res = await fetch("/api/bookings?" + params.toString(), {
          headers: { Accept: "application/json" },
        });

        const json = await res.json();
        if (!json.ok) {
          await Swal.fire({
            icon: "error",
            title: "Failed to load bookings",
            text: json.message || "Something went wrong while loading bookings.",
            background: "#151821",
            color: "#f9fafb",
            confirmButtonText: "OK",
            confirmButtonColor: "#4b63ff",
            customClass: {
              popup: "swal2-suit-popup",
              confirmButton: "swal2-suit-confirm",
            },
          });
          return;
        }

        state.total = json.pagination.total;
        state.totalPages = json.pagination.totalPages;
        renderTable(json.data);
        renderFooter(json.pagination);
      }

      function renderTable(rows) {
        tbody.innerHTML = "";

        if (!rows.length) {
          const tr = document.createElement("tr");
          const td = document.createElement("td");
          td.colSpan = 9;
          td.style.textAlign = "center";
          td.style.padding = "14px";
          td.textContent = "No bookings found.";
          tr.appendChild(td);
          tbody.appendChild(tr);
          return;
        }

        rows.forEach((b) => {
          const tr = document.createElement("tr");
          tr.dataset.id = b.id;

          // Booking ID
          const tdId = document.createElement("td");
          const bookingIdSpan = document.createElement("span");
          bookingIdSpan.className = "booking-id";
          bookingIdSpan.textContent = b.bookingId || b.id;
          tdId.appendChild(bookingIdSpan);
          tr.appendChild(tdId);

          // Customer Name
          const tdCustomer = document.createElement("td");
          const customerSpan = document.createElement("span");
          customerSpan.className = "customer-name";
          customerSpan.textContent = b.customerName || "-";
          tdCustomer.appendChild(customerSpan);
          tr.appendChild(tdCustomer);

          // Event Date
          const tdEvent = document.createElement("td");
          const eventSpan = document.createElement("span");
          eventSpan.className = "date-text";
          eventSpan.textContent = b.eventDate || "-";
          tdEvent.appendChild(eventSpan);
          tr.appendChild(tdEvent);

          // Pickup Date
          const tdPickup = document.createElement("td");
          const pickupSpan = document.createElement("span");
          pickupSpan.className = "date-text";
          pickupSpan.textContent = b.pickupDate || "-";
          tdPickup.appendChild(pickupSpan);
          tr.appendChild(tdPickup);

          // Return Date
          const tdReturn = document.createElement("td");
          const returnSpan = document.createElement("span");
          returnSpan.className = "date-text";
          returnSpan.textContent = b.returnDate || "-";
          tdReturn.appendChild(returnSpan);
          tr.appendChild(tdReturn);

          // Items Summary
          const tdItems = document.createElement("td");
          tdItems.textContent = b.itemsSummary || "-";
          tr.appendChild(tdItems);

          // Booking Status
          const tdStatus = document.createElement("td");
          const statusBadge = document.createElement("span");
          statusBadge.classList.add("status-badge");
          const status = (b.bookingStatus || "").toLowerCase();
          if (status === "confirmed") statusBadge.classList.add("status-confirmed");
          else if (status === "draft") statusBadge.classList.add("status-draft");
          else if (status === "completed") statusBadge.classList.add("status-completed");
          else if (status === "cancelled") statusBadge.classList.add("status-cancelled");
          statusBadge.textContent = b.bookingStatus || "Draft";
          tdStatus.appendChild(statusBadge);
          tr.appendChild(tdStatus);

          // Payment Status
          const tdPayment = document.createElement("td");
          const paymentBadge = document.createElement("span");
          paymentBadge.classList.add("payment-badge");
          const payment = (b.paymentStatus || "").toLowerCase();
          if (payment === "paid") paymentBadge.classList.add("payment-paid");
          else if (payment === "unpaid") paymentBadge.classList.add("payment-unpaid");
          else if (payment === "partial" || payment === "partially paid") 
            paymentBadge.classList.add("payment-partial");
          
          let paymentText = b.paymentStatus || "Unpaid";
          if (b.outstandingAmount && b.outstandingAmount > 0) {
            paymentText += ` / ‚Çπ${b.outstandingAmount.toLocaleString('en-IN')} Outstanding`;
          }
          paymentBadge.textContent = paymentText;
          tdPayment.appendChild(paymentBadge);
          tr.appendChild(tdPayment);

          // Actions
          const tdActions = document.createElement("td");
          tdActions.className = "actions-cell";

          const btn = document.createElement("button");
          btn.type = "button";
          btn.className = "more-btn";
          btn.innerHTML = "&#8942;";
          btn.dataset.action = "menu";
          btn.dataset.id = b.id;

          const menu = document.createElement("div");
          menu.className = "row-menu";
          menu.innerHTML = `
            <div class="row-menu-item" data-action="view" data-id="${b.id}">View</div>
            <div class="row-menu-item" data-action="edit" data-id="${b.id}">Edit</div>
            <div class="row-menu-item delete" data-action="delete" data-id="${b.id}">Delete</div>
          `;

          tdActions.appendChild(btn);
          tdActions.appendChild(menu);
          tr.appendChild(tdActions);

          tbody.appendChild(tr);
        });
      }

      function renderFooter(p) {
        if (p.total === 0) {
          summaryText.textContent = "Showing 0‚Äì0 of 0 bookings";
        } else {
          summaryText.textContent = `Showing ${p.from}‚Äì${p.to} of ${p.total} bookings`;
        }
        pageText.textContent = `Page ${p.page} of ${p.totalPages}`;
        prevPageBtn.disabled = p.page <= 1;
        nextPageBtn.disabled = p.page >= p.totalPages;
      }

      prevPageBtn.addEventListener("click", () => {
        if (state.page <= 1) return;
        state.page -= 1;
        fetchBookings();
      });

      nextPageBtn.addEventListener("click", () => {
        if (state.page >= state.totalPages) return;
        state.page += 1;
        fetchBookings();
      });

      rowsPerPage.addEventListener("change", () => {
        state.limit = parseInt(rowsPerPage.value, 10) || 20;
        state.page = 1;
        fetchBookings();
      });

      // Search debounce
      let searchTimer;
      searchInput.addEventListener("input", () => {
        clearTimeout(searchTimer);
        searchTimer = setTimeout(() => {
          state.q = searchInput.value.trim();
          state.page = 1;
          fetchBookings();
        }, 300);
      });

      // Actions: dots menu + delete
      function closeAllMenus() {
        document
          .querySelectorAll(".row-menu.open")
          .forEach((menu) => menu.classList.remove("open"));
      }

      tbody.addEventListener("click", async (e) => {
        const menuBtn = e.target.closest(".more-btn");
        const menuItem = e.target.closest(".row-menu-item");

        if (menuBtn) {
          const cell = menuBtn.parentElement;
          const menu = cell.querySelector(".row-menu");
          const isOpen = menu.classList.contains("open");
          closeAllMenus();
          if (!isOpen) menu.classList.add("open");
          e.stopPropagation();
          return;
        }

        if (!menuItem) return;

        const action = menuItem.dataset.action;
        const id = menuItem.dataset.id;
        closeAllMenus();

        if (action === "view") {
          window.location.href = `/bookings/${id}`;
          return;
        }

        if (action === "edit") {
          window.location.href = `/bookings/${id}/edit`;
          return;
        }

        if (action === "delete") {
          const result = await Swal.fire({
            title: "Delete booking?",
            text: "This action cannot be undone.",
            icon: "warning",
            background: "#151821",
            color: "#f9fafb",
            showCancelButton: true,
            confirmButtonText: "Yes, delete",
            cancelButtonText: "Cancel",
            confirmButtonColor: "#f97373",
            cancelButtonColor: "#222635",
            customClass: {
              popup: "swal2-suit-popup",
              confirmButton: "swal2-suit-confirm",
              cancelButton: "swal2-suit-cancel",
            },
          });

          if (!result.isConfirmed) return;

          try {
            const res = await fetch(`/api/bookings/${id}`, {
              method: "DELETE",
              headers: { Accept: "application/json" },
            });

            const json = await res.json();

            if (!json.ok) {
              await Swal.fire({
                icon: "error",
                title: "Delete failed",
                text: json.message || "Something went wrong while deleting.",
                background: "#151821",
                color: "#f9fafb",
                confirmButtonText: "OK",
                confirmButtonColor: "#4b63ff",
                customClass: {
                  popup: "swal2-suit-popup",
                  confirmButton: "swal2-suit-confirm",
                },
              });
              return;
            }

            await Swal.fire({
              icon: "success",
              title: "Deleted",
              text: json.message || "Booking deleted successfully.",
              background: "#151821",
              color: "#f9fafb",
              confirmButtonColor: "#4b63ff",
              customClass: {
                popup: "swal2-suit-popup",
                confirmButton: "swal2-suit-confirm",
              },
              timer: 1500,
              showConfirmButton: false,
            });

            fetchBookings();
          } catch (err) {
            console.error(err);
            await Swal.fire({
              icon: "error",
              title: "Error",
              text: "Something went wrong while deleting.",
              background: "#151821",
              color: "#f9fafb",
              confirmButtonColor: "#4b63ff",
              customClass: {
                popup: "swal2-suit-popup",
                confirmButton: "swal2-suit-confirm",
              },
            });
          }
        }
      });

      // Close menus when clicking outside
      document.addEventListener("click", (e) => {
        if (!e.target.closest(".actions-cell")) {
          closeAllMenus();
        }
      });

      // Initial load
      fetchBookings();
    </script>
  </body>
</html>
