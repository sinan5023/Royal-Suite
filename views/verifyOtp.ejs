    <script>
      const inputs = document.querySelectorAll(".otp-input");
      const verifyBtn = document.getElementById("verifyBtn");
      const resendBtn = document.getElementById("resendBtn");
      const messageDiv = document.getElementById("message");
      const timerSpan = document.getElementById("timer");
      const successOverlay = document.getElementById("successOverlay");

      let resendTimer;
      let resendCountdown = 120; // 2 MINUTES (120 seconds)

      // Auto-focus first input
      inputs[0].focus();

      // Handle input and auto-tab
      inputs.forEach((input, index) => {
        // Input event - move to next field
        input.addEventListener("input", (e) => {
          const value = e.target.value;

          // Only allow numbers
          if (!/^\d*$/.test(value)) {
            e.target.value = "";
            return;
          }

          // Add filled class
          if (value.length === 1) {
            e.target.classList.add('filled');
            e.target.classList.remove('error');
          } else {
            e.target.classList.remove('filled');
          }

          // Move to next input if value entered
          if (value.length === 1 && index < inputs.length - 1) {
            inputs[index + 1].focus();
          }

          // Check if all filled
          checkAllFilled();
        });

        // Keydown event - handle backspace
        input.addEventListener("keydown", (e) => {
          if (e.key === "Backspace") {
            if (!e.target.value && index > 0) {
              inputs[index - 1].focus();
              inputs[index - 1].value = "";
              inputs[index - 1].classList.remove('filled');
            } else {
              e.target.value = "";
              e.target.classList.remove('filled');
            }
            checkAllFilled();
          }
        });

        // ENHANCED PASTE - Works on ALL inputs
        input.addEventListener("paste", (e) => {
          e.preventDefault();
          const pastedData = e.clipboardData.getData("text").trim().replace(/\s/g, '');

          // Only allow numeric paste
          if (!/^\d+$/.test(pastedData)) {
            showMessage("Please paste only numbers", "error");
            return;
          }

          // Fill all inputs with pasted data
          const digits = pastedData.split("").slice(0, 6);
          
          // Clear all inputs first
          inputs.forEach(inp => {
            inp.value = "";
            inp.classList.remove('filled', 'error');
          });

          // Fill with pasted digits
          digits.forEach((digit, i) => {
            if (inputs[i]) {
              inputs[i].value = digit;
              inputs[i].classList.add('filled');
            }
          });

          // Focus last filled input or last input
          const lastIndex = Math.min(digits.length, inputs.length) - 1;
          if (lastIndex >= 0) {
            inputs[lastIndex].focus();
          }

          checkAllFilled();
        });

        // Select all on focus for easy replacement
        input.addEventListener("focus", (e) => {
          e.target.select();
        });

        // Touch optimization for tablets
        input.addEventListener("touchstart", (e) => {
          e.target.focus();
        });
      });

      // Check if all fields are filled
      function checkAllFilled() {
        const allFilled = Array.from(inputs).every(
          (input) => input.value.length === 1
        );
        verifyBtn.disabled = !allFilled;
      }

      // Get OTP value
      function getOTP() {
        return Array.from(inputs)
          .map((input) => input.value)
          .join("");
      }

      // Clear OTP inputs
      function clearOTP() {
        inputs.forEach((input) => {
          input.value = "";
          input.classList.remove("error", "filled");
        });
        inputs[0].focus();
        checkAllFilled();
      }

      // Show message
      function showMessage(text, type) {
        messageDiv.textContent = text;
        messageDiv.className = `message ${type}`;
        messageDiv.style.display = "block";

        setTimeout(() => {
          messageDiv.style.display = "none";
        }, 5000);
      }

      // Verify OTP (API call unchanged)
      verifyBtn.addEventListener("click", async () => {
        const otp = getOTP();

        if (otp.length !== 6) {
          showMessage("Please enter a complete 6-digit OTP", "error");
          return;
        }

        // Add loading state
        verifyBtn.classList.add("loading");
        verifyBtn.disabled = true;

        try {
          const response = await fetch("api/auth/verifyOtp", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({ otp: otp }),
          });

          const data = await response.json();

          if (response.ok) {
            // Show animated success overlay
            successOverlay.classList.add('active');

            // Redirect after animation
            setTimeout(() => {
              window.location.href = data.redirectTo || "/dashboard";
            }, 2000);
          } else {
            showMessage(
              data.message || "Invalid OTP. Please try again.",
              "error"
            );
            inputs.forEach((input) => input.classList.add("error"));
            setTimeout(() => clearOTP(), 500);
          }
        } catch (error) {
          showMessage("Network error. Please check your connection.", "error");
          console.error("Error:", error);
        } finally {
          verifyBtn.classList.remove("loading");
          checkAllFilled();
        }
      });

      // Resend OTP (API call unchanged)
      resendBtn.addEventListener("click", async () => {
        if (resendBtn.disabled) return;

        try {
          const response = await fetch("/api/auth/resendOtp", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
          });

          const data = await response.json();

          if (response.ok) {
            showMessage("OTP resent successfully!", "success");
            clearOTP();
            startResendTimer();
          } else {
            showMessage(data.message || "Failed to resend OTP", "error");
          }
        } catch (error) {
          showMessage("Network error. Please try again.", "error");
          console.error("Error:", error);
        }
      });

      // Start 2-minute resend timer
      function startResendTimer() {
        resendCountdown = 120; // 2 minutes = 120 seconds
        resendBtn.disabled = true;

        resendTimer = setInterval(() => {
          resendCountdown--;
          
          const minutes = Math.floor(resendCountdown / 60);
          const seconds = resendCountdown % 60;
          const timeString = `${minutes}:${seconds.toString().padStart(2, '0')}`;
          
          timerSpan.textContent = `Resend available in ${timeString}`;
          
          // Warning color for last 30 seconds
          if (resendCountdown <= 30) {
            timerSpan.classList.add('warning');
          } else {
            timerSpan.classList.remove('warning');
          }

          if (resendCountdown <= 0) {
            clearInterval(resendTimer);
            resendBtn.disabled = false;
            timerSpan.textContent = "";
            timerSpan.classList.remove('warning');
          }
        }, 1000);
      }

      // Start timer on page load
      startResendTimer();

      // Allow Enter key to submit
      document.addEventListener("keypress", (e) => {
        if (e.key === "Enter" && !verifyBtn.disabled) {
          verifyBtn.click();
        }
      });

      // Prevent zoom on double-tap for iOS
      let lastTouchEnd = 0;
      document.addEventListener('touchend', (e) => {
        const now = Date.now();
        if (now - lastTouchEnd <= 300) {
          e.preventDefault();
        }
        lastTouchEnd = now;
      }, false);
    </script>
  </body>
