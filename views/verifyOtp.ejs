      .otp-container {
        display: flex;
        gap: 10px;
        justify-content: center;
        margin-bottom: 32px;
        animation: fade-in 1.2s ease-out;
      }

      .otp-input {
        width: 56px;
        height: 68px;
        background-color: #1a1d29;
        border: 2px solid #2d3748;
        border-radius: 14px;
        font-size: 28px;
        font-weight: 600;
        color: #ffffff;
        text-align: center;
