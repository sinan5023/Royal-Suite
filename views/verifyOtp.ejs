        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(75, 99, 255, 0.4);
      }

      .verify-btn:active:not(:disabled) {
        transform: translateY(0);
      }

      .verify-btn:disabled {
        background: #374151;
        cursor: not-allowed;
        transform: none;
        box-shadow: none;
      }

      .verify-btn.loading {
        position: relative;
        color: transparent;
        pointer-events: none;
      }

      .verify-btn.loading::after {
        content: "";
        position: absolute;
        width: 22px;
        height: 22px;
        top: 50%;
        left: 50%;
        margin-left: -11px;
        margin-top: -11px;
        border: 3px solid rgba(255, 255, 255, 0.3);
        border-radius: 50%;
        border-top-color: #ffffff;
        animation: spin 0.7s linear infinite;
      }

      @keyframes spin {
        to {
