        animation: slideUp 0.6s ease-out;
        position: relative;
        z-index: 1;
        backdrop-filter: blur(10px);
      }

      @keyframes slideUp {
        from {
          opacity: 0;
          transform: translateY(40px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .logo {
