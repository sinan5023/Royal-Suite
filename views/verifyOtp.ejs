      }

      /* Mobile optimization */
      @media (max-width: 480px) {
        .verify-container {
          padding: 36px 24px;
          border-radius: 16px;
        }

        h1 {
          font-size: 24px;
        }

        .logo-icon {
          width: 44px;
          height: 44px;
          font-size: 22px;
        }

        .logo-text {
          font-size: 22px;
        }

        .otp-container {
          gap: 8px;
        }

