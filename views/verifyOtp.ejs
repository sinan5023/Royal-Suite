        animation-delay: 0.4s;
      }

      @keyframes loaderBounce {
        0%, 80%, 100% {
          transform: scale(0.8);
          opacity: 0.5;
        }
        40% {
          transform: scale(1.2);
          opacity: 1;
        }
      }

      /* Tablet and iPad optimization */
      @media (min-width: 768px) and (max-width: 1024px) {
        .verify-container {
          max-width: 600px;
          padding: 60px 50px;
