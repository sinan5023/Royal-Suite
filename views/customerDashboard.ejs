    <script>
      const state = {
        page: 1,
        limit: 10,
        total: 0,
        totalPages: 1,
        q: "",
      };

      const tbody = document.getElementById("customersBody");
      const summaryText = document.getElementById("summaryText");
      const pageText = document.getElementById("pageText");
      const prevPageBtn = document.getElementById("prevPageBtn");
      const nextPageBtn = document.getElementById("nextPageBtn");
      const rowsPerPage = document.getElementById("rowsPerPage");
      const searchInput = document.getElementById("searchInput");

      async function fetchCustomers() {
        const params = new URLSearchParams({
          page: state.page,
          limit: state.limit,
          q: state.q,
        });

        const res = await fetch("/api/customers?" + params.toString(), {
          headers: { Accept: "application/json" },
        });

        const json = await res.json();
        if (!json.ok) {
          await Swal.fire({
            icon: "error",
            title: "Failed to load customers",
            text:
              json.message || "Something went wrong while loading customers.",
            background: "#151821",
            color: "#f9fafb",
            confirmButtonText: "OK",
            confirmButtonColor: "#4b63ff",
            customClass: {
              popup: "swal2-suit-popup",
              confirmButton: "swal2-suit-confirm",
            },
          });
          return;
        } // backend: { ok: true, data, pagination, message? }

        state.total = json.pagination.total;
        state.totalPages = json.pagination.totalPages;
        renderTable(json.data);
        renderFooter(json.pagination);
      }

      function renderTable(rows) {
        tbody.innerHTML = "";

        if (!rows.length) {
          const tr = document.createElement("tr");
          const td = document.createElement("td");
          td.colSpan = 8;
          td.style.textAlign = "center";
          td.style.padding = "14px";
          td.textContent = "No customers found.";
          tr.appendChild(td);
          tbody.appendChild(tr);
          return;
        }

        rows.forEach((c) => {
          const tr = document.createElement("tr");
          tr.dataset.id = c.id;

          // name + email
          const tdName = document.createElement("td");
          const nameDiv = document.createElement("div");
          nameDiv.className = "customer-name";
          nameDiv.textContent = c.name;
          const emailDiv = document.createElement("div");
          emailDiv.className = "customer-email";
          emailDiv.textContent = c.email || "";
          tdName.appendChild(nameDiv);
          tdName.appendChild(emailDiv);
          tr.appendChild(tdName);

          // code
          const tdCode = document.createElement("td");
          tdCode.textContent = c.code || "-";
          tr.appendChild(tdCode);

          // mobile
          const tdMobile = document.createElement("td");
          tdMobile.textContent = c.primaryMobile || "-";
          tr.appendChild(tdMobile);

          // email column
          const tdEmail = document.createElement("td");
          tdEmail.textContent = c.email || "-";
          tr.appendChild(tdEmail);

          // status
          const tdStatus = document.createElement("td");
          const spanStatus = document.createElement("span");
          spanStatus.classList.add("status-badge");
          const status = (c.status || "").toLowerCase();
          if (status === "active") spanStatus.classList.add("status-active");
          else if (status === "inactive")
            spanStatus.classList.add("status-inactive");
          else if (status === "vip") spanStatus.classList.add("status-vip");
          else if (status === "blacklisted")
            spanStatus.classList.add("status-blacklisted");
          spanStatus.textContent = c.status || "Active";
          tdStatus.appendChild(spanStatus);
          tr.appendChild(tdStatus);

          // total bookings
          const tdBookings = document.createElement("td");
          tdBookings.className = "numeric-cell";
          tdBookings.textContent = c.totalBookings ?? 0;
          tr.appendChild(tdBookings);

          // outstanding balance
          const tdBalance = document.createElement("td");
          tdBalance.className = "numeric-cell currency";
          tdBalance.textContent = c.outstandingBalance
            ? c.outstandingBalance.toLocaleString("en-IN")
            : "0";
          tr.appendChild(tdBalance);

          // actions: vertical dots + dropdown menu
          const tdActions = document.createElement("td");
          tdActions.className = "actions-cell";

          const btn = document.createElement("button");
          btn.type = "button";
          btn.className = "more-btn";
          btn.innerHTML = "&#8942;"; // vertical ellipsis
          btn.dataset.action = "menu";
          btn.dataset.id = c.id;

          const menu = document.createElement("div");
          menu.className = "row-menu";
          menu.innerHTML = `
        <div class="row-menu-item" data-action="view" data-id="${c.id}">View</div>
        <div class="row-menu-item" data-action="edit" data-id="${c.id}">Edit</div>
        <div class="row-menu-item delete" data-action="delete" data-id="${c.id}">Delete</div>
      `;

          tdActions.appendChild(btn);
          tdActions.appendChild(menu);
          tr.appendChild(tdActions);

          tbody.appendChild(tr);
        });
      }

      function renderFooter(p) {
        if (p.total === 0) {
          summaryText.textContent = "Showing 0‚Äì0 of 0 customers";
        } else {
          summaryText.textContent = `Showing ${p.from}‚Äì${p.to} of ${p.total} customers`;
        }
        pageText.textContent = `Page ${p.page} of ${p.totalPages}`;
        prevPageBtn.disabled = p.page <= 1;
        nextPageBtn.disabled = p.page >= p.totalPages;
      }

      prevPageBtn.addEventListener("click", () => {
        if (state.page <= 1) return;
        state.page -= 1;
        fetchCustomers();
      });

      nextPageBtn.addEventListener("click", () => {
        if (state.page >= state.totalPages) return;
        state.page += 1;
        fetchCustomers();
      });

      rowsPerPage.addEventListener("change", () => {
        state.limit = parseInt(rowsPerPage.value, 10) || 10;
        state.page = 1;
        fetchCustomers();
      });

      // search debounce
      let searchTimer;
      searchInput.addEventListener("input", () => {
        clearTimeout(searchTimer);
        searchTimer = setTimeout(() => {
          state.q = searchInput.value.trim();
          state.page = 1;
          fetchCustomers();
        }, 300);
      });

      // --- actions: dots menu + SweetAlert delete ---

      function closeAllMenus() {
        document
          .querySelectorAll(".row-menu.open")
          .forEach((menu) => menu.classList.remove("open"));
      }

      tbody.addEventListener("click", async (e) => {
        const menuBtn = e.target.closest(".more-btn");
        const menuItem = e.target.closest(".row-menu-item");

        // toggle dropdown
        if (menuBtn) {
          const cell = menuBtn.parentElement;
          const menu = cell.querySelector(".row-menu");
          const isOpen = menu.classList.contains("open");
          closeAllMenus();
          if (!isOpen) menu.classList.add("open");
          e.stopPropagation();
          return;
        }

        if (!menuItem) return;

        const action = menuItem.dataset.action;
        const id = menuItem.dataset.id;
        closeAllMenus();

        if (action === "view") {
          window.location.href = `api/customers/${id}`;
          return;
        }

        if (action === "edit") {
          window.location.href = `api/customers/${id}/edit`;
          return;
        }

        if (action === "delete") {
          const result = await Swal.fire({
            title: "Delete customer?",
            text: "This action cannot be undone.",
            icon: "warning",
            background: "#151821", // card background
            color: "#f9fafb", // text color
            showCancelButton: true,
            confirmButtonText: "Yes, delete",
            cancelButtonText: "Cancel",
            confirmButtonColor: "#f97373", // your danger color
            cancelButtonColor: "#222635", // subtle border color
            customClass: {
              popup: "swal2-suit-popup",
              confirmButton: "swal2-suit-confirm",
              cancelButton: "swal2-suit-cancel",
            },
          }); // { ok: true, message: "..." } still handled the same

          if (!result.isConfirmed) return;

          try {
            const res = await fetch(`/api/customers/${id}`, {
              method: "DELETE",
              headers: { Accept: "application/json" },
            });

            const json = await res.json();

            // backend: { ok: true, message: "..." }
            if (!json.ok) {
              await Swal.fire({
                icon: "error",
                title: "Delete failed",
                text: json.message || "Something went wrong while deleting.",
                background: "#151821",
                color: "#f9fafb",
                confirmButtonText: "OK",
                confirmButtonColor: "#4b63ff",
                customClass: {
                  popup: "swal2-suit-popup",
                  confirmButton: "swal2-suit-confirm",
                },
              });
              return;
            }

            await Swal.fire({
              icon: "success",
              title: "Deleted",
              text: json.message || "Customer deleted successfully.",
              background: "#151821",
              color: "#f9fafb",
              confirmButtonColor: "#4b63ff",
              customClass: {
                popup: "swal2-suit-popup",
                confirmButton: "swal2-suit-confirm",
              },
              timer: 1500,
              showConfirmButton: false,
            });

            fetchCustomers();
          } catch (err) {
            console.error(err);
            await Swal.fire({
              icon: "error",
              title: "Error",
              text: "Something went wrong while deleting.",
            });
          }
        }
      });

      // close menus when clicking outside
      document.addEventListener("click", (e) => {
        if (!e.target.closest(".actions-cell")) {
          closeAllMenus();
        }
      });

      // initial load
      fetchCustomers();
    </script>
  </body>
