          <table class="table">
            <thead>
              <tr>
                <th>Customer Name</th>
                <th>Customer ID / Code</th>
                <th>Primary Mobile</th>
                <th>Email</th>
                <th>Status</th>
                <th class="numeric-cell">Total Bookings</th>
                <th class="numeric-cell">Outstanding Balance (‚Çπ)</th>
